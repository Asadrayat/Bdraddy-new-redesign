        /* ================================
           CHART STYLES
        ================================== */
        .--top-block {
          margin-bottom: 16px;
        }

        .--chart-title {
          color: #000;
          font-weight: 400;
          margin: 0 0 12px;
        }

        p.--chart-content {
          font-size: 14px;
          line-height: 18px;
          margin-block: 8px 0;
        }

        .pdp--size-size-chart-wrapper {
          overflow-x: auto;
          -webkit-overflow-scrolling: touch;
        }

        .pdp--size-size-chart {
          display: grid;
          grid-template-columns: repeat(4, minmax(120px, 1fr));
          font-family: Arial, sans-serif;
          text-align: center;
        }


        .pdp--size-size-chart > div {
          padding: 16px;
          border: 1px solid #fff;
          background: #E5E7EB;
        }

        .pdp--size-size-chart > .table__header {
          background: #1F2937;
          color: #fff;
          font-weight: bold;
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .pdp--size-size-chart > .body-col {
          background: #1F2937;
          color: #fff;
          font-weight: bold;
          position: sticky;
          left: 0;
        }

        /* Men chart grid */
        .pdp--size-size-chart.pdp--size-men {
          grid-template-columns: repeat(5, minmax(120px, 1fr));
        }

        /* Women chart grid */
        .pdp--size-size-chart-wrapper.pdp--size-women {
          {% comment %} max-width: 500px; {% endcomment %}
        }
        .pdp--size-size-chart-wrapper.pdp--size-women  .pdp--size-size-chart {
          grid-template-columns: repeat(5, minmax(120px, 1fr));
        }
      .pdp--size-size-chart-wrapper.pdp--size-women  .pdp--size-size-chart > .body-col:first-child {
    display: flex;
    justify-content: center;
    align-items: center;
          text-align: center;
          grid-column: 1/3;
      }

        /* pdp--size-kids chart grid */
        .pdp--size-size-chart-wrapper.pdp--size-kids {
          {% comment %} max-width: 650px; {% endcomment %}
        }
        .pdp--size-size-chart-wrapper.pdp--size-kids .pdp--size-size-chart {
          grid-template-columns: repeat(4, minmax(120px, 1fr));
        }
  }

