<style>
    {% comment %} Notify Me styling Start {% endcomment %}
     input#notification-email {
          {% comment %} color: #FFF; {% endcomment %}
          text-align: left;
          font-family: var(--font-body-family);
          font-size: 13px;
          font-style: normal;
          font-weight: 400;
          line-height: 100%;
          {% comment %} text-transform: uppercase; {% endcomment %}
          box-sizing: border-box;
          border: 0;
          width: 100%;
          cursor: pointer;
          border-radius: var(--rounded-none, 0px);
          /* background: linear-gradient(90deg, #010D05 0%, #132D1B 100%); */
          display: flex;
          padding: var(--Spacing-Container-sm, 12px);
          justify-content: center;
          align-items: center;
          gap: 8px;
          align-self: stretch;
          border: 1px solid #004027;
          {% comment %} margin-block: var(--Spacing-Container-xs, 8px); {% endcomment %}
          transition: all 0.4s;
      }

      button.--inline-notify-stock-button{
        color: #FFF;
        text-align: center;
        {% comment %} font-family: var(--font-body-family); {% endcomment %}
        font-family: var(--font-family-Heading, Gotham);
        font-size: 18px;
        font-style: normal;
        font-weight: 700;
        line-height: 100%;
        text-transform: uppercase;
        box-sizing: border-box;
        border: 0;
        width: 100%;
        cursor: pointer;
        margin-block: var(--Spacing-Container-xs, 8px);
        border-radius: var(--rounded-none, 0px);
        background: #212b36;
        display: flex;
        {% comment %} padding: var(--Spacing-Container-sm, 12px) var(--Spacing-Container-lg, 32px); {% endcomment %}
        padding: 20px var(--Spacing-Container-sm, 16px);
        justify-content: center;
        align-items: center;
        gap: 8px;
        align-self: stretch;
        border: 1px solid #004027;
        transition: all 0.4s;
        height: 48px;
        @media(max-width: 768px){
            font-size: 14px;
            line-height: 14px;
            padding: 12px var(--Spacing-Container-sm, 16px);
        }

      }
      button.--inline-notify-stock-button:hover {
          border-radius: var(--rounded-none, 0px);
          background: #fff;
          color: #212b36;
      }
      button.notify-stock-button-x {
          margin: 0 0 8px;
            @media screen and (max-width: 1249px){
                margin: 0;
            }
      }
      .success-msg.grey-box {
        opacity: 0;
        transition: all 0.4s;
      }
      .success-msg.grey-box {
            opacity: 1;
            text-align: center;
            font-size: 13px;
            font-style: normal;
            line-height: 1.2em;
            box-sizing: border-box;
            width: 100%;
            margin-block: var(--Spacing-Container-xs, 8px);
            display: block;
            padding: var(--Spacing-Container-sm, 12px) var(--Spacing-Container-lg, 32px);
            transition: all 0.4s;
            background-color: #f2f3f5;
      }

  .--notify_me_disclaimer_message   p {
      color: var(--Content-Base-base, #4B5563);
      font-family: var(--font-body-family);
      font-size: var(--Font-Size-Paragraph-Tiny, 12px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Tiny, 16px);
      {% comment %} padding-block: 10px; {% endcomment %}
      @media(max-width: 600px){
        background: #fcfaf6;
        padding: 10px;
      }
  }
  .--notify_me_disclaimer_message  a{
    color: #004027;
  }
    {% comment %} Notify Me styling End {% endcomment %}



    .p-info-btn-buy-now{
      margin: 0;
      display: flex;
      padding: 16px var(--Spacing-Container-sm, 16px);
      justify-content: center;
      align-items: center;
      gap: 8px;
      align-self: stretch;
      border-radius: var(--rounded-none, 0px);
      border: 1px solid var(--Brand-Primary, #212B36);
      font-size: 12px;
      font-family: var(--font-family-Control, "Archivo Expanded");
      @media(max-width: 768px) {
        padding: 12px var(--Spacing-Container-sm, 16px);
      }
    }
    .p-info-btn-buy-now p{
      color: var(--Content-Base-main, #1F2937);
      text-align: center;
      margin: 0;
      font-size: 12px;
      font-family: var(--font-family-Control, "Archivo Expanded");
      line-height: var(
        --Line-Height-UI-Controls-Control-Button-Main,
        10px
      ); /* 100% */
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 20px);
      text-transform: uppercase;
      @media(max-width: 768px){
        font-size: 10px;
      }
    }
    .payment_terms {
        color: var(--Content-Base-main, #1F2937);
        text-align: center;
        font-family: var(--font-family-Body, Gotham);
        font-size: var(--Font-Size-Paragraph-Medium, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 22px);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        flex-wrap: wrap;
        @media(max-width: 768px) {
          font-size: 12px;
        }
    }
</style>

{% liquid
  for option in product.options_with_values
    if option.name == 'Size' or option.name == 'size'
      for value in option.values
        if value.selected
          assign selected_size = value
        endif
      endfor
    endif
  endfor
%}

<div class="pinfo-form-wrapper {% if block.settings.enable_mb %}mb{% endif %}">
  {% if product.tags contains 'EMBROIDER' and product.selected_or_first_available_variant.available %}
    <div class="--embroider-button-messsage">
      {{ settings.embroidery_message_collection_page }}
    </div>
  {% endif %}

  {% comment %}
    {% unless product.selected_or_first_available_variant.available %}
      <button
        class="notify-stock-button-x  button"
        type=""
      >
        Notify Me
      </button>
    {% endunless %}
  {% endcomment %}
  {% unless product.selected_or_first_available_variant.available %}
    <div
      class="--notfify-form-wrapper"
      data-company-id="{{ section.settings.company_id }}"
      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
    >
      <input type="email" name="notification_email" id="notification-email" placeholder="Enter your email" required>
      <small class="error-msg"></small>
      <small class="success-msg"></small>
      {% if block.settings.notify_me_disclaimer_message != blank %}
        <div class="--notify_me_disclaimer_message">{{ block.settings.notify_me_disclaimer_message }}</div>
      {% endif %}
      <button
        class="--inline-notify-stock-button"
        type=""
      >
        Notify Me
      </button>
      <button
        class="notify-stock-button-x hidden"
        type=""
      >
        Notify Me
      </button>
    </div>
  {% endunless %}
  {% form 'product', product %}
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
    <input type="hidden" name="quantity" value="1">
    {% if product.tags contains 'EMBROIDER' and product.selected_or_first_available_variant.available %}
      <input type="hidden" name="properties[_Embroidery Status]" value="Embroidered Product">
    {% endif %}

    <button
      {% unless product.selected_or_first_available_variant.available %}
        disabled
      {% endunless %}
      class="pinfo-add-to-cart button {% unless product.selected_or_first_available_variant.available %} hidden  {% endunless %}"
      type="submit"
    >
      {% if product.selected_or_first_available_variant.available %}
        Add to cart
      {% else %}
        Sold Out
      {% endif %}
      - {{ product.selected_or_first_available_variant.price | money }}
    </button>

    {% if block.settings.dynamic_checkout_button %}
      {% comment %}
        {{ form | payment_button }}
      {% endcomment %}
      <a
        href="{{ shop.url }}/cart/{{ product.selected_or_first_available_variant.id }}:1?payment=shop_pay"
        class="p-info-btn-buy-now"
      >
        <p>{{ block.settings.dynamic_checkout_button_text }}</p>
        <svg xmlns="http://www.w3.org/2000/svg" width="39" height="16" viewBox="0 0 39 16" fill="none">
