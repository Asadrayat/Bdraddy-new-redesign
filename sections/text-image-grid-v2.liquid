{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    max-width: 100vw;
    overflow:hidden;
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat({{section.blocks.size}}, 1fr);
    grid-gap: var(--Spacing-Container-lg, 40px);
    @media(max-width: 768px) {
      grid-template-columns: 1fr;
      grid-gap: 24px;
      box-sizing: border-box;
    }

    .img-wrapper{
      position: relative;
      overflow: hidden;
      @media(max-width: 768px) {
        grid-row: {{ section.settings.image_position_mobile }};
        grid-columns: 1/2;
      }
      img{
        width: 100%;
        height: auto;
        {% if section.settings.imagesize == "potrait" %}
        aspect-ratio: 4/5;
        {% else %}
          aspect-ratio: 1;
        {% endif %}
        transition: all 0.4s ease-in-out;
        object-fit: cover;
      }
      svg{
        width: 100%;
        height: auto;
        aspect-ratio: 4/5;
        background: rgba(0,0,0,10%);
      }
    }
    .img-wrapper:hover img {
      scale: 1.05;
    }
    .text-wrapper {
      display: flex;
      flex-direction: column;
      align-items: flex-start;

      .sub-title{
        color: #000;
        font-family: var(--font-family-Control, "Archivo Expanded");
        font-size: 13px;
        font-style: normal;
        font-weight: 400;
        line-height: 16px; /* 123.077% */
        letter-spacing: 0.78px;
        text-transform: uppercase;
        margin: 0 0 var(--Spacing-Container-sm, 16px) 0;
      }
      .title{
        color: #000;
        font-family: var(--font-family-Title, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H3, 32px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H3, 40px); /* 125% */
        letter-spacing: -0.64px;
        margin: 0 0 48px 0;
        text-align: left;
      }
      .text{
        color: #000;
        font-family: var(--font-family-Body, "Archivo Expanded");
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 250;
        line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
        margin: 0;
        text-align: left;
        strong{
          font-family: var(--font-family-Title, "Sainte Colombe");
          font-size: var(--Font-Size-Heading-H5, 20px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Heading-H5, 24px); /* 120% */
          letter-spacing: -0.4px;          
        }
      }
      .text *{
        text-align: left;
      }
      .text p:first-child{
        margin-top: 0;
      }
      .text p:last-child{
        margin-bottom: 0;
      }
      .btn--wrapper {
          display: flex;
          justify-content: left;
          align-items: center;
          gap: var(--Spacing-Container-md, 24px);
        @media(max-width: 768px){
          flex-direction: column;
          gap: 0;
          align-items: flex-start;
        }
      }
      .buttonX_:first-child{
        color: #fff;
        background-color: #1f2937;
       
      }
      .buttonX_:first-child:before {
          content: "";
          box-shadow: unset!important;
          position: absolute;
          top: 0;
          left: -102%;
          width: 100%;
          height: 100%;
          background-color: #fff;
          transition: left .4s ease;
          z-index: -1;
          border: 1px solid var(--Background-inverted-main, #1f2937);
      }
      .buttonX_:first-child:hover {
          color: #1f2937 !important;
          text-decoration: none;
      }
      .buttonX_:first-child:hover:before {
          z-index: -1;
          left: -1%;
          width: 102%;
      }
      .buttonX_.button {
        margin-top: 24px;
      }

      @media(max-width: 768px) {
        .sub-title{
          font-size: 20px;
          line-height: 24px;
          /* margin-bottom: 8px; */
          letter-spacing: -0.64px;
          margin: 0;
        }
        .title{
          font-size: 20px;
          line-height: 24px;
          margin-bottom: 0px;
        }
        .text{
          font-size: 12px;
          line-height: 16px;
          margin: var(--Spacing-Container-sm) 0 0 0;
        }
        .buttonX_.button{
          width: 100%;
          /* font-size: 20px; */
          /* padding: 10px 0px; */
          margin-top: 16px;
        }
      }
    }
  }

  @media screen and (min-width: 769px){
    {% if section.settings.content__style == 'media' %}
      .sec-{{ id }} .img-wrapper{
        order: 1;
      }
      .sec-{{ id }} .text-wrapper{
        order: 2;
      }
    {% elsif section.settings.content__style == 'texts' %}
      .sec-{{ id }} .img-wrapper{
        order: 2;
      }
      .sec-{{ id }} .text-wrapper{
        order: 1;
      }
    {% endif %}
  }

  @media screen and (max-width: 768px){
    .text-wrapper{
      /* padding: 16px; */
    }
    .img-wrapper {
        grid-column: 1/2;
        grid-row: 1/2;
    }
  }
</style>

<div
  class="sec-{{ id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  {% if settings.animations_reveal_on_scroll %}
    data-cascade
  {% endif %}
>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div
              class="img-wrapper {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              {% unless block.settings.image_desktop == blank %}
                <picture>
                  <source
                    media="(min-width:1920px)"
                    data-srcset="{{ block.settings.image_desktop | image_url: width: 1900 }}"
                  >
                  <source
                    media="(min-width:1600px)"
                    data-srcset="{{ block.settings.image_desktop | image_url: width: 1600 }}"
                  >
                  <source
                    media="(min-width:1440px)"
                    data-srcset="{{ block.settings.image_desktop | image_url: width: 1400 }}"
                  >
                  <source
                    media="(min-width:1024px)"
                    data-srcset="{{ block.settings.image_desktop | image_url: width: 1000 }}"
                  >
                  <source media="(min-width:650px)" srcset="{{ block.settings.image_desktop | image_url: width: 600 }}">

                  {% unless block.settings.image_mobile == blank %}
                    {{
                      block.settings.image_mobile
                      | image_url: width: 400
                      | image_tag: loading: 'lazy', class: 'lazyload'
                    }}
                  {% else %}
                    {{
                      block.settings.image_desktop
                      | image_url: width: 400
                      | image_tag: loading: 'lazy', class: 'lazyload'
                    }}
                  {% endunless %}
                </picture>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endunless %}
            </div>
          {% when 'text' %}
            <div class="text-wrapper" style="justify-content: {{ block.settings.alignment }}">
              {% unless block.settings.sub_title == blank %}
                <h2 class="sub-title">{{ block.settings.sub_title }}</h2>
              {% endunless %}
              {% unless block.settings.title == blank %}
                <h2 class="title">{{ block.settings.title }}</h2>
              {% endunless %}
              {% unless block.settings.text == blank %}
                <div class="text rethink-sans">{{ block.settings.text }}</div>
              {% endunless %}
              <div class="btn--wrapper">
                {% unless block.settings.button_text == blank %}
                  <a class="buttonX_ button" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                {% endunless %}            
                {% unless block.settings.button_text_two == blank %}
                  <a class="buttonX_ button" href="{{ block.settings.button_url_two }}">{{ block.settings.button_text_two }}</a>
                {% endunless %}            
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
