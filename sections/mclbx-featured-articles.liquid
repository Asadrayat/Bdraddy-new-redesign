{% liquid
  assign id = section.id
%}

{% assign section_visibility = false %}
<style>
        #shopify-section-{{id}} {
          box-sizing: border-box;
          margin-top: {{section.settings.margin_top | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
          padding-top: {{section.settings.padding_top | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
          {% if section_visibility == false %}
            /* display: none; */
          {% endif %}
        }

        @media(max-width: 600px) {
          #shopify-section-{{id}} {
            margin-top: {{section.settings.margin_top_m | append: 'px'}};
            margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
            padding-top: {{section.settings.padding_top_m | append: 'px'}};
            padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
          }
        }

      .sec-{{ id }}{
        h2.--section-title {
            color: var(--Content-Base-main, #1F2937);
            /* text-align: center; */
            font-family: var(--font-family-Title, Archivo);
            font-size: var(--Font-Size-Heading-H2, 40px);
            font-style: normal;
            font-weight: 400;
            line-height: var(--Line-Height-Heading-H2, 40px);
            letter-spacing: -0.4px;
            margin-block: 0 var(--Spacing-Container-sm, 16px);;
             @media(max-width: 600px){
               text-align: left;
             }
        }
        p.--section-subtitle {
            color: var(--Content-Base-main, #1F2937);
            margin-block: 0  var(--Spacing-Container-sm);
            font-family: var(--font-family-Body, Archivo);
            font-size: var(--Font-Size-Paragraph-Regular, 16px);
            font-style: normal;
            font-weight: 400;
            line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
            max-width: 640px;
             @media(max-width: 600px){
               text-align: left;
             }
        }
        .--card-container {
            /* display: grid;
            grid-template-columns: repeat({{ section.settings.slides_per_view }},1fr);
            gap: var(--Spacing-Container-sm);
            @media(max-width: 600px){
              grid-template-columns: 1fr;
            } */
        }
      .--card-wrapper {
        position: relative;
      }
      .--image-wrapper img , svg {
          display: block;
          width: 100%;
          height: auto;
          {% if section.settings.img_ratio == 'portrait' %}
            aspect-ratio: 100/123;
          {% elsif section.settings.img_ratio == 'landecape' %}
            aspect-ratio: 123/100;
          {% elsif section.settings.img_ratio == 'square' %}
            aspect-ratio: 1;
          {% endif %}
          object-fit: cover;
          object-position: center;
          overflow: hidden;
          /* border-radius: 16px; */
          @media(max-width: 600px){
          {% if section.settings.img_ratio_mobile == 'portrait' %}
            aspect-ratio: 3/4;
          {% elsif section.settings.img_ratio_mobile == 'landecape' %}
            aspect-ratio: 4/3;
          {% elsif section.settings.img_ratio_mobile == 'square' %}
            aspect-ratio: 1;
          {% endif %}
          }
      }
        svg {
            border: 1px solid #0000004a;
        }
       
      .--text-block {
          box-sizing: border-box;
          margin-block: var(--Spacing-Container-sm, 16px);
          display: flex;
          gap: var(--Spacing-Container-md, 24px);
          flex-direction: column;
      }
      h4.--card-title {
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Title, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H4, 24px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H4, 28px); /* 116.667% */
        letter-spacing: -0.48px;
        margin-block: 0;
      }

  .--card-content {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      overflow: hidden;
      -webkit-box-orient: vertical;
      color: var(--Content-Base-main, #1F2937);
      font-size: var(--Font-Size-Paragraph-Regular, 16px);
      line-height: var(--Line-Height-Paragraph-Regular, 24px);
  }
  a.--learn-more {
      color: var(--Content-Base-base, #4B5563);
      font-family: var(--font-family-Control, "Archivo Expanded");
      font-size: 13px;
      font-style: normal;
      font-weight: 400;
      line-height: 13px;
      text-decoration-line: underline;
      text-decoration-style: solid;
      text-decoration-skip-ink: none;
      text-decoration-thickness: auto;
      text-underline-offset: auto;
      text-underline-position: from-font;
      text-transform: uppercase;
  }
    .absolute-link {
        position: absolute;
        display: block;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
    }
    .hero_slider__nav_icon {
          width: 40px;
          height: 40px;
          display: flex;
          background: #fff;
          line-height: 1;
          position: absolute;
          top: 50%;
          z-index: 1;
          border-radius: 50%;
          align-items: center;
          justify-content: center;
          transform: translateY(-50%);
          box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
          cursor: pointer;
         @media(max-width: 600px) {
           display: flex;
         }
      }
  .hero_slider__nav_icon svg{
       width: 25px;
      height: auto;
      border: none;
  }
  .hero_slider__nav_icon:after {
    content: none!important;
  }



        
      }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.title != blank %}
        <h2 class="--section-title">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      <p class="--section-subtitle">{{ section.settings.subtitle }}</p>
      <div class="--card-container">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% assign section_visibility = true %}
              {% assign article = block.settings.article %}
              
              <div class="--card-wrapper swiper-slide">
                {% if article.url != blank %}
                  <a class="absolute-link" href="{{ article.url  }}"></a>
                {% endif %}
                <div class="--image-wrapper">
                  {% if article.image != blank %}
                    {{ article.image | image_url: width: article.image.width | image_tag }}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                <div class="--text-block">
                  <h4 class="--card-title">
                    {{ article.title }}
                  </h4>
                  <div class="--card-content">
                    {{ article.content | strip_html }}
                  </div>
                  <a class="--learn-more" href="{{ article.url }}">Read The Story</a>
                </div>
              </div>
            {% endfor %}
          </div>
         {% if section.settings.show_slider_arrow %}
            <div class="prev-{{ section.id }} hero_slider__nav_icon swiper-button-prev">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
            <div class="next-{{ section.id }} hero_slider__nav_icon swiper-button-next">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
         {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
   swiperSlider["{{ id }}"] = {};
 

   swiperSlider["{{ id }}"].slider = new Swiper(".swiper-{{ section.id }}", {
     slidesPerView: 1.2,
     spaceBetween: 16,
     // allowTouchMove: false, 
     // pagination: {
     //   el: ".swiper-pagination",
     //   clickable: true,
     // },
     navigation: {
        nextEl: ".swiper-button-next.next-{{ section.id }}",
        prevEl: ".swiper-button-prev.prev-{{ section.id }}",
      },
     breakpoints: {
       768: {
         slidesPerView: 3,
         spaceBetween: 40,
       }
     },
   });
</script>

{% schema %}
{
  "name": "Featured Articles",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
