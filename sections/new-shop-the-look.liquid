{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    @media(min-width: 768px) {
      .--product-card-v3.--august-product-card .--color-options {
          {% comment %} justify-content: flex-end; {% endcomment %}
      }    
      .--product-card-v3.--august-product-card .--product-info {
          {% comment %} align-items: flex-end; {% endcomment %}
      }    
      .--product-card-v3.--august-product-card h3.--product-title {
        {% comment %} text-align: left; {% endcomment %}
      }    
    }
  }

  .wrapper-{{ id }}{
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    {% comment %} gap: var(--Spacing-Container-md, 24px); {% endcomment %}
    gap: 0;
    @media(max-width: 768px){
      grid-template-columns: minmax(0,1fr);
      gap: 32px;
    }
  }

  .sec-{{ id }} .img-wrapper--{{ section.id }} img {
    width: 100%;
    max-width: 100%;        
    height: 100%;
    object-fit: cover;
    @media(max-width: 768px){
      max-width: 100%; 
    }    
  }
  
  .sec-{{ id }} .left--wrapper {
    position: relative;
    max-height: max-content;
  }
  .sec-{{ id }} .title-wrapper--{{ section.id }} h2{
    margin: 0 0 32px;
  }
  .title-wrapper--{{ section.id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: var(--Spacing-Container-xxl);
    display: flex;
    align-items: flex-start;
    justify-items: start;
    flex-direction: column;
    justify-content: flex-end;
   }
  .title-wrapper--{{ section.id }} h2{
    color: var(--Content-Inverted-main, #F3F4F6);

    /* Headings/H2 */
    font-family: var(--font-family-Heading, Gotham);
    font-size: var(--Font-Size-Heading-H2, 40px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
    letter-spacing: -1.2px;
    text-transform: uppercase;
    margin: 0 0 24px;
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }    
  }
  .title-wrapper--{{ section.id }} p{
    color: var(--Content-Inverted-main, #F3F4F6);

    /* Paragraph/Medium */
    font-family: var(--font-family-Body, Gotham);
    font-size: var(--Font-Size-Paragraph-Medium, 14px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Medium, 22px); /* 157.143% */
    margin: 0 0 var(--Spacing-Container-xl);
  }
  .title-wrapper--{{ section.id }} a{
    color: #F3F4F6;
 }
  .title-wrapper--{{ section.id }} a::after, .title-wrapper--{{ section.id }} a::before{
        filter: invert(1);
  }

  .sec-{{ id }} .right--wrapper-dektop {
    /* max-height: 80vh;  */
    /* max-height: 80vh; */
    overflow-y: auto;
    {% comment %} direction: rtl; {% endcomment %}
    padding-right: 0;
    scroll-behavior: smooth;
    display: grid;
    grid-template-columns: repeat(2,minmax(0,1fr));
    gap: var(--Spacing-Container-sm, 16px);
    padding-left: 50px;
    {% if section.settings.img_position == 'right' %}
      grid-column: 1;
      grid-row: 1;
    {% endif %}
    @media(max-width: 768px){
      display: none;
      direction: unset;
      padding-left: 0px;
    }    
  }

.sec-{{ id }} .right--wrapper-dektop::-webkit-scrollbar-track
{
	{% comment %} -webkit-box-shadow: inset 0 0 2px rgba(0,0,0,0.3);
	background: rgba(75, 85, 99, 0.30); {% endcomment %}
}

.sec-{{ id }} .right--wrapper-dektop::-webkit-scrollbar
{
  width: 0;
	{% comment %} width: 2px;
	background: rgba(75, 85, 99, 0.30); {% endcomment %}
}

.sec-{{ id }} .right--wrapper-dektop::-webkit-scrollbar-thumb
{
	{% comment %} background-color: #000000;
	border: none;
  overflow: hidden; {% endcomment %}
}
  .sec-{{ id }} .right--wrapper-mbl {
    display: none;
    @media(max-width: 768px){
      display: block;
    }    
  }
  
  /* .sec-{{ id }}.scroll-enabled {
    overflow: auto;
  }

  .sec-{{ id }}.scroll-disabled {
    overflow: hidden;
  } */

@media(max-width: 768px) {
  .sec-{{ id }} {
    margin-top: {{section.settings.margin_top_m | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
    padding-top: {{section.settings.padding_top_m | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
  }    
}

</style>

<div class="sec-{{ id }}" id="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %} belongsToNav" id="{{ section.settings.sec_id  | downcase }}">
    <div class="wrapper-{{ id }}">
      <!-- Left Image -->
      <div class="left--wrapper">
        <div class="title-wrapper--{{ section.id }}">
          <h2>{{ section.settings.title }}</h2>  
          <p>{{ section.settings.subtitle }}</p>
          {% unless section.settings.label == blank %}
            <a class="arrow_btn" href="{{ section.settings.url }}">{{ section.settings.label }}</a>
          {% endunless %}
        </div>
        <div class="img-wrapper--{{ section.id }}">
          {{ section.settings.image | image_url: width: section.settings.image.width | image_tag }}          
        </div>
      </div>

      <!-- Right Product List Desktop -->
      <div class="right--wrapper right--wrapper-dektop">
        {% for block in section.blocks %}
          {% unless block.settings.collection == blank %}
            {% for product in block.settings.collection.products limit: section.settings.p_to_show %}
              <div class="product-card">
                 {%# render 'product-card-new-v1', product: product, loading: true %}
                    {% render 'product-card-v3', product: product, loading: true %}
              </div>
            {% endfor %}
          {% endunless %}
        {% endfor %}
      </div>
      
      <!-- Right Product List Mobile -->
      <div class="right--wrapper right--wrapper-mbl">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% unless block.settings.collection == blank %}
                {% for product in block.settings.collection.products limit: section.settings.p_to_show %}
                  <div class="swiper-slide">
                    {%# render 'product-card-new-v1', product: product, loading: true %}
                    {% render 'product-card-v3', product: product, loading: true %}
                  </div>
                {% endfor %}
              {% endunless %}
            {% endfor %}
          </div>         
        </div>
      </div>
      
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const img = document.querySelector('.sec-{{ id }} .left--wrapper');
    const rightWrapper = document.querySelector('.sec-{{ id }} .right--wrapper-dektop');
    function adjustRightWrapperHeight() {
      const imageHeight = img.clientHeight;
      rightWrapper.style.maxHeight = `${imageHeight}px`; 
    }
    adjustRightWrapperHeight();
    window.addEventListener('resize', adjustRightWrapperHeight);
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: 1.2,
      spaceBetween: 12,
      scrollbar: {
        el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
        // hide: true,
        draggable: true
      },      
    });
  });
</script>

{% schema %}
{
  "name": "New Shop The Look",
  "settings": [
    {
      "type": "text",
      "id": "sec_id",
      "label": "Section ID"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
