{% assign id = section.id %}
<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    overflow: hidden;
  }
  .sec-{{ id }} {
    .category__wrap {
        display: flex;
        padding: var(--Spacing-Container-xxs, 6px);
        align-items: center;
        border-radius: 0;
        border: 1px solid #E0E0E0;
        background: #FFF;
        width: max-content;
        margin: 0 auto var(--Spacing-Container-xxl);
        gap: 16px;                 
      {% comment %} @media(max-width: 1400px) { {% endcomment %}
        justify-content: start;
        max-width: 100%;
        overflow: auto;
        scrollbar-width: auto;
      }
      .category__wrap::-webkit-scrollbar {
        width: 2px;
        height: 2px;
      }

      .category__wrap::-webkit-scrollbar-thumb {
        background: #1F3E2F;
        cursor: pointer;
        border-radius: 10px;
      }      
      .category__heading {
        display: flex;
        padding: var(--Spacing-Container-sm, 12px) var(--Spacing-Container-lg, 24px);
        align-items: center;
        gap: var(--Spacing-Container-xs, 12px);
        border-radius: 0;
        background: transparent;  
        min-width: max-content;
        @media(max-width: 1024px) {
            min-width: max-content;
        }         
      }
      h3{
        margin: 0;
        cursor: pointer;
        position: relative;
        color: var(--Brand-Primary, #212B36);

        /* UI Controls/Control/input/sm */
        font-family: var(--font-body-family);
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        text-wrap: nowrap;
        line-height: 20px; /* 125% */
      }
    }
    .category__wrap h3:after {
      position: absolute;
      content: "";
      background: #292929;
      width: 0;
      height: 2px;
      left: 0;
      transition: all 0.4s;
      bottom: -14px;
    }
    .category__heading.active,
    .category__heading:hover {
        background: #1F3E2F;
        * {
            color: #fff;
        }
        img {
            filter: invert(1);
        }
    }
    .pt__richtext {
        display: none;
        grid-template-columns: repeat(2,1fr);
        gap: var(--Spacing-Container-xxl);
        align-items: center;
        border-radius: 0;
        background: #FFF;
        box-shadow: 0 10px 36px 0 rgba(0, 0, 0, 0.16), 0 0 0 1px rgba(0, 0, 0, 0.06);
        padding: var(--Spacing-Container-lg, 24px);  
        @media(max-width: 1024px) {
            grid-template-columns: 1fr;
        }
        img {
            width: 100%;
            height: auto;
            object-fit: cover;            
        }         
    }
    .pt__richtext.active {
        display: grid;
    }
    .info__wrap {
        display: flex;
        flex-direction: column;
        gap: var(--Spacing-Container-lg); 
        padding-inline-start: var(--Spacing-Container-xxl);   
        @media(max-width: 1024px) {
          padding-inline-start: 0;   
        }              
        .title__wrap__ {
            display: flex;
            justify-content: start;
            align-items: center;
            gap: var(--Spacing-Container-lg, 24px);
            align-self: stretch;
            h3 {
                color: #1F3E2F;
                text-wrap: wrap;
                font-family: var(--font-family-Heading, "Sainte Colombe");
                font-size: 32px;
                font-style: normal;
                font-weight: 700;
                line-height: var(--Line-Height-Heading-H2, 40px);
                text-transform: capitalize;
                margin: 0;
                @media(max-width: 1024px) {
                    font-size: 24px;
                }                
            }    
        }        
        img {
            display: flex;
            width: 44px;
            height: 44px;
            padding: 12px;
            justify-content: center;
            align-items: center;
            gap: 8px;
            aspect-ratio: 1/1;
            border-radius: 32px;
            background: #EEEDE6;            
        }
        .richtext {
           color: var(--Content-Base-main, #1F2937); 
           p {                
                font-family: var(--font-family-Body, Gotham);
                font-size: 14px;
                font-style: normal;
                font-weight: 400;
                line-height: 22px; /* 157.143% */
                margin: 0;          
           }
           ul {
                display: block;        
                margin-block-start: var(--Spacing-Container-lg);
                margin-block-end: 1em;
                padding-inline-start: 20px;
                unicode-bidi: isolate;        
                li {
                    font-family: var(--font-family-Body, Gotham);
                    font-size: 14px;
                    font-style: normal;
                    font-weight: 400;
                    line-height: 150%; /* 157.143% */                      
                    list-style-type: disc;
                    margin-block-end: 8px;
                }
           }            
        }
    }
  }


  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}" id="{{ section.settings.sec_id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="category__wrap">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            {% unless block.settings.text == blank %}
              <div
                class="category__heading {% if forloop.first %}active{% endif %} category__heading-{{ block.settings.text }} "
                data-title="{{ block.settings.text | handleize }}"
              >
                {% unless block.settings.icon == blank %}
                  {{ block.settings.icon | image_url: width: 24, height: 24 | image_tag }}
                {% endunless %}
                <h3>{{ block.settings.text }}</h3>
              </div>
            {% endunless %}
          {% endif %}
        {% endfor %}
      </div>
      <div class="content__wrap">
        {% for block in section.blocks %}
          {% if block.type == 'tab_content' %}
            <div
              class="pt__richtext"
              data-title="{{ block.settings.category | handleize }}"
            >
              <div class="info__wrap">
                {% unless block.settings.category == blank %}
                  <div class="title__wrap__">
                    {% unless block.settings.icon == blank %}
                      {{ block.settings.icon | image_url: width: 24, height: 24 | image_tag }}
                    {% endunless %}
                    <h3>{{ block.settings.title }}</h3>
                  </div>
                {% endunless %}
                {% unless block.settings.content == blank %}
                  <div class="richtext">
                    {{ block.settings.content }}
                  </div>
                {% endunless %}
              </div>
                {% unless block.settings.image == blank %}
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
                {% endunless %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabHeadings = document.querySelectorAll('.wrapper-{{ id }} .category__heading');
    const contents = document.querySelectorAll('.wrapper-{{ id }} .pt__richtext');
    if (tabHeadings.length && contents.length) {
      tabHeadings[0].classList.add('active');
      contents[0].classList.add('active');
    }
    tabHeadings.forEach((tabHeading) => {
      tabHeading.addEventListener('click', () => {
        tabHeadings.forEach((th) => th.classList.remove('active'));
        contents.forEach((content) => content.classList.remove('active'));

        tabHeading.classList.add('active');
        contents.forEach((content) => {
          if (content.dataset.title === tabHeading.dataset.title) {
            content.classList.add('active');
          }
        });
      });
    });
  });
</script>

