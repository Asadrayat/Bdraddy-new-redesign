<div class="sec-{{ id }} footer__section">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top-navigation--container">
        {% for block in section.blocks %}
          {% if block.type == 'top_navigation' %}
            <div class="top-navigation--wrapper">
              {% if block.settings.top_navigation_label %}
                <a href="{{ block.settings.top_navigation_url }}" class="top-navigation--btn">
                  <span>{{ block.settings.top_navigation_label }}</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="7" height="14" viewBox="0 0 7 14" fill="none">
                    <path d="M0.874756 0.3361L1.4322 0.586508L6.67724 7.00095L6.67872 7.00277L6.67724 7.00458L1.4322 13.419L0.874756 13.6694L3.83184 7.00458L3.83244 7.00306V7.00247L3.83184 7.00095L0.874756 0.3361Z" fill="white"/>
                  </svg>
                </a>
              {% endif %}
              {% if block.settings.top_navigation_des %}
                <p class="top-navigation--des">{{ block.settings.top_navigation_des }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="main__navigation--container">
        <div class="main__navigation">
          {% for block in section.blocks %}
            {% if block.type == 'navigation' %}
              {% assign title = block.settings.menu_title %}
              {% assign menu = block.settings.nav_menu %}
              <div class="main__manu-wrapper">
                {% if title != blank %}
                  <p class="main__menu-title">{{ title | escape }}</p>
                {% else %}
                  <p class="main__menu-title">{{ menu.title }}</p>
                {% endif %}
                {% for link in menu.links %}
                  <a class="mian__menu" href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
              </div>
            {% endif %}
          {% endfor %}

          {% for block in section.blocks %}
            {% if block.type == 'invitation' %}
              {% assign invitation_title = block.settings.invitation_title %}
              {% assign invitation_des = block.settings.invitation_des %}
              {% assign invitation_label = block.settings.invitation_label %}
              {% assign invitation_url = block.settings.invitation_url %}
              {% assign show_popup = block.settings.show_popup %}
              <div class="footer__invitation--container">
                {% if invitation_title != blank %}
                  <p class="footer__invitation-title">{{ invitation_title | escape }}</p>
                {% endif %}
                {% if invitation_des != blank %}
                  <p class="footer__invitation-description">{{ invitation_des | escape }}</p>
                {% endif %}
                {% if invitation_label != blank %}
                  <a
                    {% if show_popup %}
                      onclick="openKlaviyoForm()"
                    {% else %}
                      href="{{ invitation_url }}"
                    {% endif %}
                    class="--external-link button"
                  >
                    {{- invitation_label -}}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      {% comment %} <div class="footer__bottom">
        {% if section.settings.copyright != blank %}
          <div class="copyright-text--container">
            <p>{{ section.settings.copyright }}</p>
          </div>
        {% endif %}

        {% if section.settings.privacy_label != blank %}
          <div class="privacy--container">
            <a href="{{ section.settings.privacy_url }}" class="privacy--arrow_btn">
              {{ section.settings.privacy_label }}
               <svg xmlns="http://www.w3.org/2000/svg" width="14" height="7" viewBox="0 0 14 7" fill="none">
                <path d="M13.664 0.208008L13.4136 0.765452L6.99911 6.01049L6.99729 6.01197L6.99548 6.01049L0.581035 0.765452L0.330627 0.208008L6.99548 3.1651L6.997 3.1657H6.99759L6.99911 3.1651L13.664 0.208008Z" fill="white"/>
              </svg> 
            </a>
          </div>
        {% endif %}
      </div>  {% endcomment %}

      <div class="footer__bottom footer__bottom--{{ section.id }}">
        {% if section.settings.copyright != blank %}
          <div class="copyright-text--container">
            <p>{{ section.settings.copyright }}</p>
          </div>
        {% endif %}
        {% if section.settings.privacy_label != blank %}
          <div class="privacy--container">
            <div class="privacy--dropdown">
              <button class="privacy--arrow_btn" aria-expanded="false" aria-controls="privacy-dropdown-{{ id }}">
                {{ section.settings.privacy_label }}
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="7" viewBox="0 0 14 7" fill="none" class="dropdown-arrow">
                  <path d="M13.664 0.208008L13.4136 0.765452L6.99911 6.01049L6.99729 6.01197L6.99548 6.01049L0.581035 0.765452L0.330627 0.208008L6.99548 3.1651L6.997 3.1657H6.99759L6.99911 3.1651L13.664 0.208008Z" fill="white"/>
                </svg>
              </button>
              <ul id="privacy-dropdown-{{ id }}" class="privacy--dropdown-menu" style="display: none;">
                {% if section.settings.option_one %}
                  <li><a href="{{ section.settings.option_one_url }}">{{ section.settings.option_one }}</a></li>
                {% endif %}
                {% if section.settings.option_two %}
                  <li><a href="{{ section.settings.option_two_url }}">{{ section.settings.option_two }}</a></li>
                {% endif %}
                {% if section.settings.option_three %}
                  <li><a href="{{ section.settings.option_three_url }}">{{ section.settings.option_three }}</a></li>
                {% endif %}
              </ul>
            </div>
          </div>
        {% endif %}
      </div> 

    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const button = document.querySelector('.footer__bottom--{{ section.id }} .privacy--arrow_btn');
  const menu = document.querySelector('.footer__bottom--{{ section.id }} .privacy--dropdown-menu');
  const arrow = document.querySelector('.footer__bottom--{{ section.id }} .dropdown-arrow');
  const footerSection = document.querySelector('.footer__section');
  let initialHeight = 0; 

  if (button && menu && footerSection) {
    initialHeight = footerSection.offsetHeight;

    button.addEventListener('click', function() {
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      button.setAttribute('aria-expanded', !isExpanded);
      menu.style.display = isExpanded ? 'none' : 'block';
      arrow.classList.toggle('active');

      if (!isExpanded) {
        const currentHeight = footerSection.offsetHeight;
        const menuHeight = menu.offsetHeight;
        let newMinHeight;
        if(window.innerWidth > 768){
          newMinHeight = currentHeight + menuHeight + 10;      
          console.log(newMinHeight)   
        }else{
          newMinHeight = currentHeight + 40; 
          console.log(newMinHeight)
        } 
        console.log(window.innerWidth)
        {% comment %} const newMinHeight = currentHeight + menuHeight + 10;      {% endcomment %}
        footerSection.style.minHeight = `${newMinHeight}px`;
      } else {
        footerSection.style.transition = 'min-height 0.5s ease-in-out'; // Add transition
        footerSection.style.minHeight = `${initialHeight}px`;
        // Remove transition after the animation (using setTimeout)
        setTimeout(() => {
          footerSection.style.transition = ''; 
        }, 500); 
      }
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
      if (!button.contains(event.target) && !menu.contains(event.target)) {
        button.setAttribute('aria-expanded', 'false');
        menu.style.display = 'none';
        arrow.classList.remove('active');
        // Apply transition only when closing
        footerSection.style.transition = 'min-height 0.5s ease-in-out'; 
        footerSection.style.minHeight = `${initialHeight}px`;
        setTimeout(() => {
          footerSection.style.transition = ''; 
        }, 500); 
      }
    });
  }
});
</script>

