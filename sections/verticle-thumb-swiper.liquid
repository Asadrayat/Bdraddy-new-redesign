{% liquid
  assign id = section.id
%}

<style>
    :root {
    }

    .sec-{{ id }} {
      box-sizing: border-box;
      margin: {{ section.settings.margin_top | append: 'px' }} 0 {{ section.settings.margin_bottom | append: 'px' }};
      padding: {{ section.settings.padding_top | append: 'px' }} 0 {{ section.settings.padding_bottom | append: 'px' }};
      background-color: {{ section.settings.bg | default: '#ffffff' }};
    }
  .sec-{{ id }} {
    .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--Spacing-Container-xl);
      max-width: 100%;
      {% comment %} overflow: hidden; {% endcomment %}
    }
    .button.outlined {
      width: max-content;
      margin-top: var(--Spacing-Container-xl);
    }
    .content-{{ id }} h2 {
      color: #1F2937;
      font-family: var(--font-heading-family);
      font-size: 40px;
      font-weight: 700;
      line-height: 1;
      text-transform: uppercase;
      margin: 0 0 var(--Spacing-Container-md);
    }

    .content-{{ id }} p {
      color: #1F2937;
      font-family: var(--font-body-family);
      font-size: 16px;
      font-weight: 400;
      line-height: 1.5;
      margin: 0;
    }

    .content-{{ id }} em {
      display: block;
      font-style: normal;
    }

    .swiper-container-{{ id }} {
      display: flex;
      flex-direction: row-reverse;
              gap: var(--Spacing-Container-md);
      width: 100%;
      height: 100%;
      aspect-ratio: 0.9;
    }

    .mySwiper2--{{ id }} {
      width: 100%;
      height: 100%;
      margin: 0;
    }

    .mySwiper--{{ id }} {
      width: 20%;
      max-width: 70px;
      height: 100%;
      box-sizing: border-box;
      padding: 0 0 10px 0;
      margin: 0;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;      
    }

    .mySwiper--{{ id }} .swiper-slide {
      height: auto;
      opacity: 0.7;
      cursor: pointer;
    }

    .mySwiper--{{ id }} .swiper-slide-thumb-active {
      opacity: 1;
    }

    .swiper-slide img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 4/5;
    }
    .thumb__img_gallery {
      position: relative;
    }    
  .logo__wrap {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    transform: translate(40px, -40px);
      {% comment %} transform: translate(50%, -50%); {% endcomment %}
    @media (max-width: 768px) {
      transform: translate(-8px, 8px);
    }       
  }
    .imge__wrap {
      max-width: 100%;
    }
  }

    @media (max-width: 768px) {
      .sec-{{ id }} {
        margin: {{ section.settings.margin_top_m | append: 'px' }} 0 {{ section.settings.margin_bottom_m | append: 'px' }};
        padding: {{ section.settings.padding_top_m | append: 'px' }} 0 {{ section.settings.padding_bottom_m | append: 'px' }};
      }
  .sec-{{ id }} {
      .wrapper-{{ id }} {
        grid-template-columns: 1fr;
        gap: var(--Spacing-Container-xxl, 32px);
        max-width: 100%;
        overflow: hidden;        
      }

      .swiper-container-{{ id }} {
        flex-direction: column;
        aspect-ratio: unset;
        height: auto;
      }

      .mySwiper2--{{ id }} {
        width: 100%;
         .swiper-slide {
          {% comment %} width: max-content !important; {% endcomment %}
        }
      }
      .logo__wrap img {
        max-width: 80px;
      }
      .mySwiper--{{ id }} {
        width: 100%;
        max-width: 100%;
        display: flex;
        flex-direction: row;
      }
      .thumb__img_gallery {
          max-width: 100%;
          box-sizing: border-box;
          overflow: hidden;
      }
      .mySwiper--{{ id }} .swiper-slide {
        width: 25%;
      }

      .content-{{ id }} {
        {% comment %} text-align: center; {% endcomment %}
      }

      .content-{{ id }} h2 {
        font-size: 28px;
      }

      .content-{{ id }} em {
        display: inline;
      }
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="content content-{{ id }}">
        <h2>{{ section.settings.title | default: 'Gallery' }}</h2>
        <p>{{ section.settings.subtitle | default: 'Explore our collection' }}</p>
          {% if section.settings.btn_label != blank -%}
            <a class="button outlined" href="{{ section.settings.btn_url }}">{{ section.settings.btn_label }}</a>
          {%- endif %}        
      </div>
      <div class="thumb__img_gallery">
        <div class="swiper-container-{{ id }}">
          <div class="swiper mySwiper2--{{ id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <div class="imge__wrap">
                    {% unless block.settings.image == blank %}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag: loading: 'lazy'
                      }}
                    {% endunless %}
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
          <div thumbsSlider="" class="swiper mySwiper--{{ id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <div class="imge__wrap">
                    {% unless block.settings.image == blank %}
                      {{ block.settings.image | image_url: width: 70 | image_tag: loading: 'lazy' }}
                    {% endunless %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
        {% unless section.settings.logo == blank %}<div class="logo__wrap">{{ section.settings.logo | image_url: width: 160, height: 160 | image_tag }}</div>{% endunless %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const thumbSwiper = new Swiper(`.mySwiper--{{ id }}`, {
      spaceBetween: 10,
      slidesPerView: 'auto',
      freeMode: true,
      watchSlidesProgress: true,
      direction: 'horizontal',
      breakpoints: {
        768: {
          direction: 'vertical',
          slidesPerView: 'auto',
        },
      },
    });

    const mainSwiper = new Swiper(`.mySwiper2--{{ id }}`, {
      spaceBetween: 10,
      direction: 'horizontal',   
      slidesPerView: 1,    
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      thumbs: {
        swiper: thumbSwiper,
      },
      breakpoints: {
        768: {
          direction: 'vertical',
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Vertical Thumb Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },    
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Gallery"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "label": "Sub Title",
      "default": "Explore our collection"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Read more"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    },    
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Aspect ratio 4:5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vertical Thumb Slider"
    }
  ]
}
{% endschema %}
