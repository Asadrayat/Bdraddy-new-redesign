{% liquid
  assign id = section.id
%}

<style>
      #shopify-section-{{id}} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        background: {{ section.settings.bg-color }};
        --Content-Base-main : {{ section.settings.content-color }};
        --Text-primary : {{ section.settings.content-color }};
      }

      @media(max-width: 600px) {
        #shopify-section-{{id}} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }
    .sec-{{ id }} {
      @media(min-width: 601px) {
        {% if section.settings.restrict-content-width == true %}
            max-width: 1080px;
            margin-inline: auto;
        {% endif %}

      }

    * {
      letter-spacing: normal;
    }
    h1 {
      color: var(--Text-primary, #000);
      margin-block: 0 var(--Spacing-Container-xxs, 8px);
    }
    h2 {
      color: var(--Text-primary, #000);
      /* Headings/H2 */
      font-family: var(--font-family-Title, Krylon);
      font-size: var(--Font-Size-Heading-H2, 36px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 36px); /* 100% */
      margin-block: 0 var(--Spacing-Container-xxs, 8px);
    }



      h3 {
        color: var(--Content-Base-main, #1F2937);
        /* Headings/H3 */
        font-family: var(--font-family-Title, Krylon);
        font-size: var(--Font-Size-Heading-H3, 24px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H3, 28px); /* 116.667% */
        margin-block: 0 var(--Spacing-Container-xxs, 8px);
      }


    p {
      margin-block: var(--Spacing-Container-xs, 12px);
      color: var(--Content-Base-main, #1F2937);
      text-align: center;
      font-family: var(--font-family-Body, "Sainte Colombe");
      font-size: var(--Font-Size-Paragraph-Large, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Large, 30px);
    }

   p  em {
      /* color: var(--Content-Inverted-main, #F3F4F6); */
       color: var(--Content-Base-main, #1F2937);
      text-align: center;
      font-family: var(--font-family-Control, "Archivo Expanded");
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 24px;
  }



    ul {
        color: var(--Content-Base-main, #4B5563);
        padding-left: 20px;
    }
     ul li {
        list-style-type: disc;
    }
  .content {
      margin-block: var(--Spacing-Container-sm, 16px);
  }
  .content svg {
      width: 100%;
      aspect-ratio: 2/1;
      border: 1px solid;
  }
  .content img {
      width: 100%;
      height: auto;
  }
    }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <h1 class="--section-title">{{ section.settings.title }}</h1>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'richtext' %}
            <div class="content">
              {{ block.settings.title }}
            </div>
          {% when 'image' %}
            <div class="content">
              {% comment %}
                  {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              {% endcomment %}

              {% if block.settings.image != blank and block.settings.image_mobile != blank %}
                {{
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag: class: 'small-hide medium-hide'
                }}
                {{
                  block.settings.image_mobile
                  | image_url: width: block.settings.image_mobile.width
                  | image_tag: class: 'large-up-hide'
                }}
              {% elsif block.settings.image != blank and block.settings.image_mobile == blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              {% elsif block.settings.image_mobile != blank %}
                {{ block.settings.image_mobile | image_url: width: block.settings.image_mobile.width | image_tag }}
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>

          {% else %}

        {% endcase %}
      {% endfor %}
      <!--
        <div class="content">
          {{ section.settings.content }}
        </div>
      -->
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contents",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"

    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "restrict-content-width",
      "label": "Restrict Content Width",
      "default": true
    },
     {
      "type": "color",
      "id": "bg-color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "content-color",
      "label": "Content Color"
    },

    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "richtext",
      "name": "Text Block",
      "settings": [{
        "type": "richtext",
        "id": "title",
        "label": "Text Content",
        "info": "Use Italic to hightlight text"
      }]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
        {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image Mobile"
      }



      ]
    }
  ],

  "presets": [
    {
      "name": "Contents"
    }
  ]
}
{% endschema %}
