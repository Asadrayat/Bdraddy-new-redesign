{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    object-fit: cover;
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
    @media(max-width: 600px) {
      height: auto
    }
  }
  .wrapper-{{ id }} .image-wrap.custom img {
    height: auto;
    max-height: {{ section.settings.banner_max_height | append:'px' }};
    @media(max-width: 600px) {
      height: auto
    }
  }
 
  .wrapper-{{ id }} .image-wrap.adaptive img {
    height: calc(100vh - 44px);
    /* object-fit: fill; */
    @media(max-width: 1280px) {
      height: 100vh;
    }
    @media(max-width: 600px) {
      height: calc(100svh - 100px);
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper  {
    position: absolute;
    width: 100%;
    height: 100%;
    padding: 64px 0;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    @media(max-width: 600px) {
      padding: 0 16px;
    }
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    @media(max-width: 768px) {
      padding: 32px 0;
    }
  }
  .wrapper-{{ id }} .content__info {
    display: flex;
    flex-direction: column;
    @media(max-width: 768px) {
      width: 100%;      
    }
  }

  /* css for content customization starts ............................................................*/


  /* css for content customization ends ..................................................... */
  .wrapper-{{ id }} .block__wrapper p.pretitle {
    /* color: var(--Content-Inverted-main, #F3F4F6); */

    /* UI Controls/Contextual/tagline/small */
    font-family: var(--font-family-Control);
    font-size: var(--Font-Size-Paragraph-Large);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Font-Size-Paragraph-Large); /* 125% */
    letter-spacing: 1.2px;
    text-transform: uppercase;
    margin: 0 0 var(--Spacing-Container-sm) 0 ;
  }
  .wrapper-{{ id }} .block__wrapper h1 {
    color: var(--Content-Inverted-main, #F3F4F6);
    font-family: var(--font-family-Title);
    font-size: var(--Font-Size-Heading-H1, 56px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1, 64px);
    letter-spacing: -1.12px;
    margin: 0 0 var(--Spacing-Container-md) 0;
    @media(max-width: 768px) {
      font-size: 36px;
    }
    a {
      color: inherit;
      text-decoration: underline;
      text-underline-offset: 3px;
    }
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        /* display: unset; */
      }
    }
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-medium {
    font-size: var(--Font-Size-Heading-H1);
  }
  .wrapper-{{ id }} .block__wrapper h1.heading-large {
    font-size: 96px;
    font-family: var(--font-family-Title);
    line-height: 83%;
    @media(max-width: 768px) {
      font-size: 64px;
    }
  }
  .wrapper-{{ id }} .block__wrapper p.subtitle {
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Large, 20px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Large, 30px);
    margin: 0 0 var(--Spacing-Container-lg) 0 ;
    a {
      color: inherit;
      text-decoration: underline;
      text-underline-offset: 3px;
    }
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }
  }
  .hero_slider__nav_icon {
      width: 40px;
      height: 40px;
      display: flex;
      background: #fff;
      line-height: 1;
      position: absolute;
      top: 50%;
      z-index: 1;
      border-radius: 50%;
      align-items: center;
      justify-content: center;
      transform: translateY(-50%);
      box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
      cursor: pointer;
     @media(max-width: 600px) {
       display: none;
     }
  }
  .hero_slider__nav_icon svg path {
    stroke: #000;
  }
  .hero_slider__nav_icon.swiper-button-disabled {
      display: none;
  }
  .prev-{{ section.id }}.hero_slider__nav_icon {
    left: 16px;
  }
  .next-{{ section.id }}.hero_slider__nav_icon {
    right: 16px;
  }
  .wrapper-{{ id }} .swiper-pagination {
    display: none;
  }
  @media(min-width: 768px) {
    .wrapper-{{ id }} .content__wrapper.pagination__padding {
      padding-bottom: 36px;
    }
    .wrapper-{{ id }} .swiper-pagination {
      display: block;
      bottom: 2.5px !important;
      .swiper-pagination-bullet {
        width: 28px;
        height: 5px;
        background: #9C9C9C;
        border-radius: 0;
        opacity: 1;
        transition: .4s all ease-in-out;
      }
      .swiper-pagination-bullet.swiper-pagination-bullet-active {
        width: 60px;
        height: 5px;
        background: #fff;
      }
    }
  }
  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% assign image = block.settings.image %}
        {% assign image_mobile = block.settings.image_mobile %}
        {% assign pretitle = block.settings.pretitle %}
        {% assign title = block.settings.title %}
        {% assign subtitle = block.settings.subtitle %}
        {% assign button_label_primary = block.settings.btn_label1 %}
        {% assign button_url_primary = block.settings.btn_url1 %}
        {% assign button_label_secondary = block.settings.btn_label2 %}
        {% assign button_url_secondary = block.settings.btn_url2 %}
        <div class="swiper-slide">
          {% render 'hero-slider-style', block: block, section: section %}
          <div class="block__wrapper block__wrapper-{{ section.id }}-{{ block.id }}">
            {% if image %}
              <div class="image-wrap {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
                {{ image | image_url: width: image.width | image_tag }}
              </div>
            {% else %}
              <div class="image-wrap  {{ section.settings.banner_height }} {% if image_mobile %}small-hide{% endif %}">
                {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            {% if image_mobile %}
              <div class="image-wrap  large-up-hide medium-hide {{ section.settings.banner_height }}">
                {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
              </div>
            {% endif %}
            <div class="content__wrapper {% if section.settings.show_pagination %}pagination__padding{% endif %}">
              <div class="content page-width {{ block.settings.content_position }} mobile-{{ block.settings.content_position_m }}">
                <div class="content__info">
                  {% if pretitle != blank %}
                    <p class="pretitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                      {{ pretitle }}
                    </p>
                  {% endif %}
                  {% if title != blank %}
                    <h1 class="info-{{ block.id }} heading-{{ block.settings.heading_size }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                      {{ title }}
                    </h1>
                  {% endif %}
                  {% if subtitle != blank %}
                    <p class="subtitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }} {% if section.settings.hide_subtitle %} desktop__only{% endif %}">
                      {{ subtitle }}
                    </p>
                  {% endif %}
                  {% if button_label_primary != blank or button_label_secondary != blank %}
                    <div class="btn__wrapper justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                      {% if button_label_primary != blank %}
                        <a class="button" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                      {% endif %}
                      {% if button_label_secondary != blank %}
                        <a class="button" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

