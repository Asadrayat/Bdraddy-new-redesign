{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      overflow: hidden;
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
    #shopify-section-{{id}}{
      .top--wrapper{
        display: flex;
        justify-content: space-between;
        align-items: center;
        align-self: stretch;
        margin-bottom: var(--Spacing-Container-xl, 40px);
      }
      .title--wrapper{
        display: flex;
        max-width: 800px;
        flex-direction: column;
        justify-content: center;
        {% comment %} text-align: center; {% endcomment %}
        gap: var(--Spacing-Container-xs, 12px);
        flex: 1 0 0;
      }
      .title{
        {% comment %} text-align: center; {% endcomment %}
        margin: 0;
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Title, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H2, 48px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H2, 56px); /* 116.667% */
        letter-spacing: -0.96px;
      }
      .subtitle{
        margin: 0;
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Body, "Sainte Colombe");
        font-size: var(--Font-Size-Paragraph-Medium, 18px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */
      }
      .arrow_btn:before, .arrow_btn:after {
          top: 50%;
          transform: translatey(-50%);
      }
      .btn-wrapper{
        @media(max-width: 768px){
          display: none;
        }
      }
      .bottom--wrapper{
        /* display: none; */
        /* @media(max-width: 768px){
          display: block;
          margin-top: var(--Spacing-Container-lg, 24px);
        } */
      }
      .card-grid-container{
        display: grid;
        grid-template-columns: repeat({{ section.settings.grid_desktop }}, minmax(0,1fr));
        gap: var(--Spacing-Container-lg, 40px);
        @media(max-width: 600px){
          grid-template-columns: repeat({{ section.settings.grid_desktop_mbl }}, minmax(0,1fr));
          gap: var(--Spacing-Container-md, 16px);
        }
      }


      /* Swiper Navigation */
      .collection-list-wrapper{
        position: relative;
      }
      .swiper-button-next:after,
      .swiper-button-prev:after {
        content: 'none';
      }
      .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
        display: none!important;
      }
      #slider-next--{{ section.id }} {
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          right: 12px;
          transform: translateY(-100%);
        {% else %}
          right: 0;
          transform: translate(50%, -100%);
        {% endif %}
        @media(max-width: 600px){
          /* transform: unset; */
          right: 2px;
        }
      }
      #slider-next--{{ section.id }} svg{
        width: 24px;
        height: 24px;
      }
     #slider-prev--{{ section.id }}{
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          left: 12px;
           transform: translateY(-100%);
        {% else %}
          left: 0;
           transform: translate(-50%, -100%);
        {% endif %}
        @media(max-width: 600px){

        }
     }
     #slider-prev--{{ section.id }} svg{
        width: 24px;
        height: 24px;
     }
    .swiper:not(.swiper-initialized) .swiper-slide {
        max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
        margin-right: 16px;
        overflow: hidden;
        @media(max-width: 600px){
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
        }
    }
    .swiper-scrollbar-{{ section.id }} {
      position: relative !important;
      left: 0 !important;
      bottom: 0 !important;
      margin: var(--Spacing-Container-md) 0;
      height: 1px !important;
      opacity: 1 !important;
      width: 100% !important;
      cursor: pointer;
      padding-block: 8px;
      background: transparent;
      .swiper-scrollbar-drag {
        background: #00094b;
        display: block !important;
        height: 1px;
      }
    }
    .swiper-scrollbar-{{ section.id }}::before {
      position: absolute;
      content: "";
      background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
      top: 50%;
      left: 0;
      width: 100%;
      height: 1px;
    }
  }
</style>

<div class="sec-{{ id }} belongsToNav" id="{{ section.settings.sec_id  | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top--wrapper">
        <div class="title--wrapper">
          {% if section.settings.title != blank %}
            <h2 class="title">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.subtitle != blank %}
            <h2 class="subtitle">{{ section.settings.subtitle }}</h2>
          {% endif %}
        </div>

        {% if section.settings.btn != blank %}
          <div class="button--wrapper desktop__only">
            <a class="arrow_btn" href="{{ section.settings.btn_url }}">{{ section.settings.btn }}</a>
          </div>
        {% endif %}

        {% comment %}
          <div class="btn-wrapper">
            {% if section.settings.btn != blank %}
              <a href="{{ section.settings.btn_url }}" class="button">{{ section.settings.btn }}</a>
            {% endif %}
          </div>
        {% endcomment %}
      </div>
      <div class="collection-list-wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% unless block.settings.collection == blank %}
                  {% liquid
                    assign collection_url = block.settings.collection.url
                  %}
                  {% for product in block.settings.collection.products limit: section.settings.p_to_show %}
                    <div class="swiper-slide">
                      {% # render 'product-card-new-v1', product: product, loading: true %}
                      {% render 'product-card-v3', product: product, loading: true %}
                    </div>
                  {% endfor %}
                {% endunless %}
              {% endfor %}
            </div>
            <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
          </div>
          {% if section.settings.show_slider_arrow %}
            <div class="swiper-button-next" id="slider-next--{{ section.id }}">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
            <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
          {% endif %}
        {% else %}
          <div class="card-grid-container">
            {% for block in section.blocks %}
              {% unless block.settings.collection == blank %}
                {% for product in block.settings.collection.products limit: section.settings.p_to_show %}
                  <div class="card-grid">
                    {% render 'product-card-v3', product: product, loading: true %}
                  </div>
                {% endfor %}
              {% endunless %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
        {% if section.settings.btn != blank %}
          <div class="bottom--wrapper mobile__only">
            <a class="button" href="{{ section.settings.btn_url }}">{{ section.settings.btn }}</a>
          </div>
        {% endif %}      
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 16,
      scrollbar: {
        el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
        draggable: true
        // hide: true
      },
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 24,
        },
      },
      navigation: {
        nextEl: "#slider-next--{{ section.id }}",
        prevEl: "#slider-prev--{{ section.id }}",
      }
    });
  });
</script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "sec_id",
      "label": "Section ID"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button Label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_link",
      "label": "Link Button To Selected Collectin",
      "default": true
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    },
    {
      "type": "range",
      "id": "p_to_show",
      "min": 3,
      "max": 12,
      "step": 1,
      "label": "Product To Show",
      "default": 6
    },
    {
      "type": "range",
      "id": "grid_desktop",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "Column (Desktop)",
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_desktop_mbl",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Column (Mobile)",
      "default": 1
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable Slider",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_slider_arrow",
      "label": "Show Slider Arrow",
      "default": true
    },
    {
      "type": "range",
      "id": "slides_per_view",
      "min": 3,
      "max": 6,
      "step": 0.2,
      "label": "Slides Per View",
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_mbl",
      "min": 1,
      "max": 2,
      "step": 0.2,
      "label": "Slides Per View On Mobile",
      "default": 1.2
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "limit": 1,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "blocks": [
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
