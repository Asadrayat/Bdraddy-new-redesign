{% liquid
  assign id = section.id
%}
{% assign review_object = page.metafields.custom.landing_page_data.value.landing_page_testimonial.value %}
{% assign review_list = review_object.reviews.value %}

<style>
  #shopify-section-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    overflow: hidden;
    max-width: 100%;
    .bg__image img {
      object-fit: cover;
      width: 100%;
      height: auto;
    }
  }
  .sec-{{ id }} * {
    color: #fff;
  }
  .sec-{{ id }} {
    position: relative;
    .page-width {
      position: absolute;
      top: 0;
      left: 50%;
      width: 100%;
      height: 100%;
      transform: translateX(-50%);
      padding: 64px;
      display: flex;
      gap: var(--Spacing-Container-xl);
      flex-direction: column;
      justify-content: space-between;
      @media(max-width: 768px) {
        gap: var(--Spacing-Container-sm);
        padding: 15px;
      }
    }
    .swiper--{{ id }} {
      height: 100%;
      overflow: unset;
      @media(max-width: 768px) {
        height: auto;
      }
    }
    .swiper--{{ id }} .swiper-slide{
      box-sizing: border-box;
    }
    .__nav__wrapper {
        display: flex;
        gap: 8px;
        align-items: center;
        justify-content: end;
        margin: 0 0 var(--Spacing-Container-lg) 0;
    }
    .--nav-icon {
      display: flex;
      width: 36px;
      height: 36px;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      gap: 8px;
      border: 1px solid var(--Border-Base-subtle, #E5E7EB);
      background: #FFF;
    }
    .--nav-icon.swiper-button-lock {
        display: none;
    }
    h2 {
        color: var(--Content-Inverted-main, #F3F4F6);
        /* Headings/H2 */
        font-family: var(--font-family-Heading, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H2, 40px);
        font-style: normal;
        font-weight: 700;
        line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
        text-transform: uppercase;
        margin: 0 0 var(--Spacing-Container-xl) 0;
        {% comment %} max-width: 384px; {% endcomment %}
    }
  }
  .card--{{ id }} {
    display: flex;
    {% comment %} min-width: 380px; {% endcomment %}
    padding: var(--Spacing-Container-lg, 24px);
    flex-direction: column;
    {% comment %} justify-content: center; {% endcomment %}
    justify-content: flex-start;
    
    align-items: flex-start;
    gap: var(--Spacing-Container-lg, 24px);
    align-self: stretch;
    background: rgba(0, 0, 0, 0.60);
    backdrop-filter: blur(14px);
    box-sizing: border-box;
    max-width: 100%;
    {% comment %} height: 100%; {% endcomment %}
    @media(max-width: 768px) {
      gap: var(--Spacing-Container-sm);
      padding: 15px;
      min-width: 100%;
    }
    h3 {
      margin: 0 0 var(--Spacing-Container-md, 24px);;
    }
    p.subtitle {
      font-family: var(--font-family-Body, Gotham);
      font-size: var(--Font-Size-Paragraph-Medium, 16px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Medium, 24px);
    }
    p.user {
      /* Paragraph/Small */
      font-family: var(--font-family-Body, Gotham);
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px); /* 142.857% */
    }
    p{
      margin: 0;
    }
  }
  @media(max-width: 600px) {
    #shopify-section-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  {% unless section.settings.bg_img == blank %}
    <picture class="bg__image">
      {% if section.settings.bg_img_m %}
        <source media="(max-width: 600px)" srcset="{{ section.settings.bg_img_m | image_url: width: 600 }}">
      {% endif %}
      <source media="(max-width: 1024px)" srcset="{{ section.settings.bg_img | image_url: width: 1024 }}">
      <img
        src="{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}"
        alt="{{ section.settings.bg_img.alt | escape }}"
        loading="lazy"
      >
    </picture>
  {% endunless %}

  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h2 class="heading">{{ section.settings.text }}</h2>
    <div class="wrapper-{{ id }}">
      <div class="__nav__wrapper">
        <div class="swiper-prev-{{ section.id }} --nav-icon">
          {%- render 'header-icons', name: 'left' -%}
        </div>
        <div class="swiper-next-{{ section.id }} --nav-icon">
          {%- render 'header-icons', name: 'right' -%}
        </div>
      </div>
      <div class="swiper swiper--{{ id }}">
        <div class="swiper-wrapper">
          {% for review in review_list %}
            {% assign review_splitted = review | split: '##' %}

            <div class="swiper-slide">
              <div class="card--{{ id }}">
                {% unless section.settings.rating == blank %}
                  {{ section.settings.rating | image_url: width: 100 | image_tag }}
                {% endunless %}
                <div>
                  <h3 class="title">{{ review_splitted[0] }}</h3>
                  <p class="subtitle">{{ review_splitted[1] }}</p>
                </div>
                <p class="user">{{ review_splitted[2] }}</p>
              </div>
            </div>
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    function fcinitSwiper(classname) {
      if (classname) {
        new Swiper(classname, {
          slidesPerView: 1.2,
          spaceBetween: 20,
          loop: true,
          {% comment %} autoHeight: false, {% endcomment %}
          navigation: {
            nextEl: '.swiper-next-{{ section.id }}',
            prevEl: '.swiper-prev-{{ section.id }}',
          },
          breakpoints: {
            200: {
              slidesPerView: 1.2,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 3,
              spaceBetween: 20,
            },
            1024: {
              slidesPerView: 3,
              spaceBetween: 25,
            },
            1400: {
              slidesPerView: 3,
              spaceBetween: 40,
            },
          },
        });
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      
      fcinitSwiper('.swiper--{{ id }}');
      setEqualHeightv2(".sec-{{ id }}", ".card--{{ id }}");
    });

    // Optional: Add an event listener to handle window resize events
    window.addEventListener('resize', function () {
      fcinitSwiper('.swiper--{{ id }}}'); // Re-initialize Swiper on window resize
    });
  })();
</script>

{% comment %} <script>
 function setEqualHeight(selector){
      const divs = document.querySelectorAll(selector);
      const maxHeight = Math.max(...Array.from(divs, div => div.offsetHeight));
      divs.forEach(div => {
        div.style.height = `${maxHeight}px`;
      });
    };
  }
  document.addEventListener('DOMContentLoaded', () => {
    setEqualHeight('.card--{{ id }}');
    
  });
</script> {% endcomment %}

