{% liquid
  assign id = section.id
%}
{% assign product = section.settings.product %}
{% liquid
  assign product_cards = product.metafields.custom.product_card.value
  assign product_images = product.metafields.custom.product_image.value
%}
{% comment %} {% assign section_visibility = false %}
{% for image in product_images %}
  {% if forloop.last and forloop.index == product_cards.size %}
    {% assign section_visibility = true %}
  {% endif %}
{% endfor %} {% endcomment %}
<style>
    .sec-{{ id }} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      background: #FAF8F5;
       {% if product_cards == blank %}
        display: none;
      {% endif %}
    }

    @media(max-width: 600px) {
      .sec-{{ id }} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
  .sec-{{ id }} {
    .wrapper-{{ id }}{
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: var(--Spacing-Container-xxl, 48px);
      align-items: center;
      @media(max-width: 768px){
      grid-template-columns: 1fr;
    
      }
    }
  .--image-wrapper {
    display: block;
    background-color: #000;
    background-image: url('{{ section.settings.image | image_url }}');
    background-size: cover;
    background-position: center;
    box-sizing: border-box;
    padding: var(--Spacing-Container-xxl, 48px) var(--Spacing-Container-lg, 24px);
    display: flex;
    align-items: flex-end;
    {% comment %} justify-content: flex-end; {% endcomment %}
     aspect-ratio: 4/5;
     justify-content: flex-start;
   @media(max-width: 768px){
      aspect-ratio: 4/5;
  }
    
  }
  .--image-title{
      color: var(--Content-Inverted-main, #F3F4F6);
      margin-block: 0;
  }
  .--text-block-wrapper{
      display: flex;
      padding: var(--Spacing-Container-0, 0);
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      gap: var(--Spacing-Container-lg, 24px);
  }
  .--single-text-block {
    display: flex;
    padding: var(--Spacing-Container-lg, 24px);
    flex-direction: column;
    align-items: flex-start;
    gap: var(--Spacing-Container-lg, 24px);
    align-self: stretch;
    border: 1px solid var(--Border-Base-subtle, #E5E7EB);
    background: var(--Background-base-Muted, #F9FAFB);
  
  }
  .--card-title{
    color: var(--Content-Base-main, #1F2937);
    /* Headings/H3 */
    font-family: var(--font-family-Heading, "Sainte Colombe");
    font-size: var(--Font-Size-Heading-H3, 20px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-Heading-H3, 24px); /* 120% */
    text-transform: uppercase;
    margin-block: 0;
  }
  .--card-content{
    color: var(--Content-Base-base, #4B5563);
    /* Paragraph/Medium */
    font-family: var(--font-family-Body, Gotham);
    font-size: var(--Font-Size-Paragraph-Medium, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Medium, 24px); /* 150% */
  }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--image-wrapper">
        {% comment %}
          {% if section.settings.image != blank %}
            {{ section.settings.image | image_url: width: 500 | image_tag }}
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
          {% endif %}
        {% endcomment %}
         <h2 class="--image-title">{{ section.settings.title }}</h2>
      </div>
      <div class="--text-block-wrapper">
        {% for card in product_cards %}
          <div class="--single-text-block">
            <h3 class="--card-title">{{ card | split: '#' | first }}</h3>
            <div class="--card-content">{{ card | split: '#' | last }}</div>
          </div>
         
        {% endfor %}
      </div>
    </div>
  </div>
</div>

