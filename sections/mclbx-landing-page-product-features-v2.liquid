{% liquid
  assign id = section.id
%}
{% assign product = section.settings.product %}
{%- assign featured_performance_attribute_title_list = product.metafields.custom.feature_performance_attribute.value -%}
<style>
    .sec-{{ id }} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      {% if featured_performance_attribute_title_list == blank %}
        display: none;
      {% endif %}
    }

    @media(max-width: 600px) {
      .sec-{{ id }} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
  .sec-{{ id }}{
  {% comment %} Start {% endcomment %}
     .wrapper-{{ section.id }} {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: var(--Spacing-Container-xxl, 48px);
      color: var(--Content-Base-main, #1F2937);

  }
  .--title-top-bar {
      {% comment %} display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--Spacing-Container-xxl, 48px); {% endcomment %}
      width: 100%;
      @media(max-width: 768px){
      grid-template-columns: 1fr;

      }
  }
  h2.--section-title {
    margin-block: 0;
    color: inherit;
    text-align: center;
    @media(max-width: 768px){
    
    }
}
.--content {
    color: inherit;
    font-size: var(--Font-Size-Paragraph-Medium, 16px);
    line-height: var(--Line-Height-Paragraph-Medium, 24px);
}
  .--attribute-container {
    display: grid;
    grid-template-columns: repeat(4,1fr);
    gap: 48px var(--Spacing-Container-xxl, 48px);
    width: 100%;
    @media(max-width: 768px){
    grid-template-columns: 1fr 1fr;
    gap: 32px var(--Spacing-Container-xxl, 32px);

    }
}
.--single-featured-card {
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-lg, 24px);
    color: var(--Content-Base-main, #1F2937);
    align-items: center;

}
img.--featue-icon {
    width: 80px;
    height: 80px;
    padding: 16px;
    background: #EDE9E3;
    @media(max-width: 768px){
    width: 64px;
    height: 64px;
    }
}
h3.--feature-title {
    color: inherit;
    margin-block: 0;
    text-align: center;
    @media(max-width: 768px){
    max-width: 150px;
    }
}
.--feature-content {
    color: inherit;
    font-size: var(--Font-Size-Paragraph-Medium, 16px);
    line-height: var(--Line-Height-Paragraph-Medium, 24px);
}


  {% comment %} End {% endcomment %}


  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--title-top-bar">
        <h2 class="--section-title">{{ section.settings.title }}</h2>
        <div class="--content">{{ section.settings.content }}</div>
      </div>

      <div class="--attribute-container">
        {% for attribute in featured_performance_attribute_title_list limit:4  %}
          {% for feature in shop.metaobjects.fabric_features.values %}
            {% if attribute == feature.title %}
              <div class="--single-featured-card">
                <img
                  src="{{ feature.icon | image_url: width: 50 }}"
                  width="48"
                  height="48"
                  alt="{{ feature.title }}"
                  loading="lazy"
                  class="--featue-icon"
                >

                <h3 class="--feature-title">{{ feature.title }}</h3>
                <div class="--feature-content">{{ feature.content }}</div>
              </div>
            {% endif %}
          {% endfor %}
          {% for feature in shop.metaobjects.fabric_features_2.values %}
            {% if attribute == feature.title %}
              <div class="--single-featured-card">
                <img
                  src="{{ feature.icon | image_url: width: 50 }}"
                  width="48"
                  height="48"
                  alt="{{ feature.title }}"
                  loading="lazy"
                  class="--featue-icon"
                >

                <h3 class="--feature-title">{{ feature.title }}</h3>
                <div class="--feature-content">{{ feature.content }}</div>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
