  "name": "LP Product Features v2",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    },
    {
