                }
                img{
                  width: 100%;
                  height: auto;
                  max-width: 75px;
                  min-width: 75px;
                  aspect-ratio: 8/9;
                }
                /* span{
                  font-size: 14px;
                  display: block;
                  color: black;
                  padding: 0;
                  margin: 0;
                } */
              }
              .lbn-product-card2{
                max-width: 400px;
                min-width: 350px;
                text-decoration: none;
                display: flex;
                /* flex-direction: column;
                width: 140px; */
                width: max-content;
                height: max-content;
                box-sizing: border-box;
                overflow: hidden;
                position: absolute;
                transform: scale(0);
                /* text-align: center; */
                transition: all 0.4s;
                background: #EEE7DD;
                padding: 10px 10px;
                /* text-align: center; */
                gap: 10px;
                {% if block.settings.top2 > 50  %}
                  bottom: 78%;
                {% else %}
                  top: 78%;
                {% endif %}
                {% if block.settings.left2 > 50  %}
                  right: 78%;
                {% else %}
                  left: 78%;
                {% endif %}
                z-index: 1;
                @media(max-width: 768px){
                  top: 3%;
                  left: 3%;
                  max-width: 94%;
                  min-width: 94%;
                }
                img{
                  width: 100%;
                  height: auto;
                  max-width: 75px;
                  min-width: 75px;
                  aspect-ratio: 8/9;

                }
                /* span{
                  font-size: 14px;
                  display: block;
                  color: black;
                  padding: 0;
                  margin: 0;
                } */
              }


              .lbn-content1 {
                .lbn-product-card1.active {
                  visibility: visible;
                  transform: scale(1);
                  transition: all 0.4s;
                }
                .lbn-content1-btn{
                  /* background: #212B36; */
                }
              }
              .lbn-product-card2.active{
                visibility: visible;
                transform: scale(1);
                transition: all 0.4s;
                .lbn-content2-btn{
                  /* background: #212B36; */
                }
              }
            }
          </style>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", e => {
    const lookBookSwiper = (callback) => {
      new Swiper(".swiper-{{ section.id }}", {
        slidesPerView: 1,
        spaceBetween: 10,
        breakpoints: {
          100: {
            slidesPerView: 1,
            spaceBetween: 0,
          },
          768: {
            slidesPerView: 1,
            spaceBetween: 10,
          },
          1024: {
            slidesPerView: 1,
            spaceBetween: 10,
          },
        },
      })
      if (callback && typeof callback === 'function') {
        callback(); // Execute the callback function if provided
      }
    }
    lookBookSwiper(() => {
      const lookbookCardBtns = document.querySelectorAll("[data-btn-lookbook]")
      const lookbookCards = document.querySelectorAll("[data-card-lookbook]")
      lookbookCardBtns.forEach(lookbookCardBtn => {
        const lookbookCardParent = lookbookCardBtn.parentElement;
        const lookbookCard = lookbookCardParent.querySelector("[data-card-lookbook]")
        console.log(lookbookCard)
        lookbookCardBtn.addEventListener("click", (e) => {

          lookbookCards.forEach(lcb => {
            lcb.classList.remove("active")
            lcb.parentElement.classList.remove("active")
          })
          lookbookCardParent.classList.add("active")
          lookbookCard.classList.add("active")
          console.log(lookbookCards)
        })
      })
    })
  })
</script>

