              .lbn-content2-btn{
                display: block;
                border: none;
                /* width: 30px;
                height: 30px;
                background: #727272;
                border: 4px solid white;
                border-radius: 15px; */
                box-sizing: border-box;
                /* padding: 0;
                z-index: 2;
                color: white;
                font-size: 16px; */
                cursor: pointer;
                @media(max-width: 768px){
                  position: absolute;
                  top: {{block.settings.top2_mbl | append: '%'}};
                  left: {{block.settings.left2_mbl | append: '%'}};
                }
              }
              .lbn-product-card1{
                max-width: 400px;
                min-width: 350px;
                text-decoration: none;
                display: flex;
                /* flex-direction: column;
                width: 140px; */
                width: max-content;
                height: max-conent;
                box-sizing: border-box;
                overflow: hidden;
                position: absolute;
                visibility: hidden;
                background: #EEE7DD;
                padding: 10px 10px;
