{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: var(--Spacing-Section-Vertical-Padding, 64px);
    align-self: stretch;
    @media(max-width: 1200px) {
        grid-template-columns: 1fr;
    }
    .--left {
        h3 {
            margin: 0 0 24px;            
        }
    }
    .--right {
        .--content {
            display: grid;
            grid-template-columns: 1fr 1fr; 
            align-items: flex-start;
            gap: var(--Spacing-Container-xxl, 48px);
            align-self: stretch;
            flex-wrap: wrap;
            @media(max-width: 768px) {
              grid-template-columns: 1fr;        
            }
        }
        h2 {
            color: #000;
            font-family: var(--font-family-Heading, Gotham);
            font-size: 32px;
            font-style: normal;
            font-weight: 700;
            line-height: 140%; /* 137.5% */
            letter-spacing: -0.96px;
            text-transform: uppercase;
            margin: 0 0 var(--Spacing-Container-xxl, 48px);
            @media(max-width: 768px) {
                font-size: 20px;
                line-height: 32px; /* 160% */
                letter-spacing: -0.6px;
                text-transform: uppercase;
            }
        }
        p {
            color: var(--Content-Base-main, #1F2937);
            margin: 0;
            /* Paragraph/Large */
            font-family: var(--font-family-Body, Gotham);
            font-size: var(--Font-Size-Paragraph-Large, 16px);
            font-style: normal;
            font-weight: 400;
            line-height: var(--Line-Height-Paragraph-Large, 28px); /* 175% */
        }
    }
    .--content-block h3{
      color: #000;
      font-family: var(--font-family-Heading, Gotham);
      font-size: var(--Font-Size-Heading-H2, 40px);
      font-style: normal;
      font-weight: 700;
      line-height: var(--Line-Height-Heading-H2, 40px);
      letter-spacing: -1.2px;
      text-transform: uppercase;
      margin: 0 0 var(--Spacing-Container-xs, 12px);      
    }
  }
  @media(max-width: 768px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .sec-{{ id }} .--content.has__blocks {
      grid-template-columns: 1fr 1fr; 
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--left">
        <h3>{{ section.settings.text }}</h3>
        {% unless section.settings.img == blank %}
          {{ section.settings.img | image_url: width: section.settings.img.width | image_tag }}
        {% endunless %}
      </div>
      <div class="--right">
        <h2>{{ section.settings.title }}</h2>
        <div class="--content {% if section.blocks.size > 0 %}has__blocks{% endif %}">
          {% unless section.settings.content1 == blank %}
            <p>{{ section.settings.content1 }}</p>
          {% endunless %}
          {% unless section.settings.content2 == blank %}
            <p>{{ section.settings.content2 }}</p>
          {% endunless %}
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
                <div class="--content-block">
                  <h3>{{ block.settings.text }}</h3>
                  <p>{{ block.settings.subtitle }}</p>
                </div>
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
