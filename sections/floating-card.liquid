{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: stratch;
    @media(max-width: 990px){
    grid-template-columns: 1fr;
    }    
  }
  .wrapper-{{ id }} .card__content_container {
    padding: var(--Spacing-Container-xxl);    
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-md);   
    @media(max-width: 990px){
    padding: 64px 0 0; 
    }       
  }
  .wrapper-{{ id }} .card__img_wrap__container {
      max-width: 100%;
      overflow: hidden;      
  }
  .wrapper-{{ id }} .--card__content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .wrapper-{{ id }} .card__img_wrap {
    max-width: 70%;
    margin: auto;
    @media(min-width: 1700px){
      max-width: 55%;
    }
    @media(max-width: 1200px){
      max-width: 80%;
    }
  }
  .wrapper-{{ id }} .pretitle {
    color: var(--Content-Base-main, #1F2937);

    /* UI Controls/Contextual/tagline/large */
    font-family: var(--font-family-Heading, Gotham);
    font-size: var(--Font-Size-UI-Controls-Contextual-Tagline-large, 18px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-UI-Controls-Contextual-Tagline-large, 24px); /* 133.333% */
    letter-spacing: 1.08px;
    text-transform: uppercase;
    margin: 0 0 16px ;
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }    
  }
  .wrapper-{{ id }} h2.title {
    color: var(--Content-Base-main, #1F2937);

    /* Headings/H2 */
    font-family: var(--font-family-Heading, Gotham);
    font-size: var(--Font-Size-Heading-H2, 40px);
    font-style: normal;
    font-weight: 700;
    line-height: var(--Line-Height-Heading-H2, 40px); /* 100% */
    letter-spacing: 0;
    text-transform: uppercase;    
    margin: 0 0 var(--Spacing-Container-md);
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }    
  }
  .wrapper-{{ id }} p.subtitle {
    color: var(--Content-Base-main, #1F2937);

    /* Paragraph/Large */
    font-family: var(--font-family-Body, Gotham);
    font-size: var(--Font-Size-Paragraph-Large, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Large, 28px); /* 175% */
    margin: 0 0 var(--Spacing-Container-xl);
    letter-spacing: 0;
    text-transform: none;
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }    
  }
  .wrapper-{{ id }} .button {
    width: max-content;
    @media(max-width: 990px){
      width: 100%;
    }      
  }
  .wrapper-{{ id }} .image__wrap {
    {% comment %} padding: 0 var(--Spacing-Container-xxl); {% endcomment %}
    box-sizing: border-box;
    img {
      width: 100%;
      height: auto;
      aspect-ratio: 5/7;
      border: 12px solid #F1F1F1;
      background: url(<path-to-image>) lightgray 50% / cover no-repeat;
      box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25), 0 4px 1.4px 0 rgba(0, 0, 0, 0.25);      
    }
}

{% comment %} pagination bullet starts {% endcomment %}
.wrapper-{{ id }} .swiper-pagination-bullets {
    position: relative; 
    text-align: left;
    display: flex;
    justify-content: start;
    align-items: center;
    bottom: unset;
    top: unset;
    gap: 8px;
} 
.wrapper-{{ id }} .swiper-pagination-bullet {   

    width: 24px;
    height: 24px;
    opacity: 1;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    
    font-family: var(--font-family-Body, Gotham);
    font-size: var(--Font-Size-Paragraph-Small, 12px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Small, 16px);
    border-radius: 99px;
    border: 1px solid #1F2937;  
    background: #F3F4F6;
    color: #1F2937;    
    margin: 0;
}
.wrapper-{{ id }} .swiper-pagination-bullet-active {
    background: #1F2937;
    color: #F3F4F6;   
    border: 1px solid #1F2937; 
}
.wrapper-{{ id }} .swiper-pagination {
    z-index: 1;
}
{% comment %} pagination bullet ends {% endcomment %}

  @media(max-width: 600px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
       <div class="card__img_wrap__container">
        <div class="card__img_wrap">
            <div class="swiper fc__swiper_{{ id }}">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                      <div class="swiper-slide">
                        <div class="image__wrap">
                            {% unless block.settings.image == blank %}
                              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
                            {% endunless %}
                        </div>
                      </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        </div>
        <div class="card__content_container">
            <div class="swiper-pagination"></div>
            <div class="--card__content">
                <p class="pretitle">{{ section.settings.pretitle  }}</p>
                <h2 class="title">{{ section.settings.title }}</h2>
                <p class="subtitle">{{ section.settings.subtitle }}</p>
                {% unless section.settings.btn_label == blank %}
                  <a class="button" href="{{ section.settings.btn_url }}">{{ section.settings.btn_label }}</a>
                {% endunless %}
            </div>
            
        </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const swiperContainer = document.querySelector(".fc__swiper_{{ id }}");
    
    const slideCount = swiperContainer.querySelectorAll('.swiper-slide').length;
    
    const middleSlideIndex = Math.floor((slideCount - 1) / 2);
    
    new Swiper(".fc__swiper_{{ id }}", {
        effect: "cards",
        grabCursor: true,
        initialSlide: middleSlideIndex, 
        pagination: {
          el: ".wrapper-{{ id }} .swiper-pagination",
          clickable: true,
          renderBullet: function (index, className) {
            return '<span class="' + className + '">' + (index < 9 ? '0' : '') + (index + 1) + "</span>";
          },
        },        
    });
});
</script>

