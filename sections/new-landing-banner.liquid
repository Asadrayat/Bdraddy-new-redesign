{% liquid
  assign id = section.id
%}
{% assign banner_object = page.metafields.custom.landing_page_data.value.landing_page_banner.value %}
<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    .btn__wrapper {
        margin-top:  var(--Spacing-Container-xl, 32px);
    }
    .button {
        color: #000000;
        background-color: #ffffff;
        position: relative;
        z-index: 2;
    }
  }
  .custom__bullets  {
    margin-top: 20px;
    @media(max-width: 768px) {
      margin-top: 12px;
    }
  }
  .wrapper-{{ id }} .image-wrap img {
    width: 100%;
    object-fit: cover;
  }
  .wrapper-{{ id }} .image-wrap.original img {
    height: auto;
  }
  .wrapper-{{ id }} .image-wrap.adaptive img {
    height: calc(100vh - 36px);
    /* object-fit: fill; */
    @media(max-width: 1280px) {
      height: 100vh ;
    }
    @media(max-width: 600px) {
      height: calc(100svh - 21px);
    }
  }
  .wrapper-{{ id }} .image-wrap.small_height img {
    height: auto;
    aspect-ratio: 3/1;
     @media(max-width: 600px) {
      aspect-ratio: 2/3;
    }
  }
  .wrapper-{{ id }} .block__wrapper {
    position: relative;
  }
  .wrapper-{{ id }} .content__wrapper  {
    position: absolute;
    width: 100%;
    height: 100%;
    padding-block: var(--Spacing-Container-xs);
    top: 0;
    left: 0;
    box-sizing: border-box;
    @media(max-width: 600px) {
      {% if section.settings.mobile_padding %}
        padding: 80px var(--Spacing-Container-sm) 80px var(--Spacing-Container-sm);
      {% else %}
        padding: var(--Spacing-Container-sm) var(--Spacing-Container-sm);
      {% endif %}
    }
  }
  .wrapper-{{ id }} .content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
  }
  .wrapper-{{ id }} .content__info {
    display: flex;
    flex-direction: column;
  }

  .wrapper-{{ id }} .block__wrapper p.pretitle {
    /* color: var(--Content-Inverted-main, #F3F4F6); */

    /* UI Controls/Contextual/tagline/small */
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Regular);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Small); /* 125% */
    letter-spacing: 0.96px;
    text-transform: uppercase;
    margin: 0 0 var(--Spacing-Container-sm) 0;
    display: flex;
    align-items: center;
    gap: var(--Spacing-Container-xs);
  }
  .wrapper-{{ id }} .block__wrapper h2 {
    /* color: var(--Content-Base-main); */
    /* text-align: center; */
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1);    
    margin: 0 0 var(--Spacing-Container-sm) 0;
    letter-spacing: 6px;
    @media(max-width: 768px) {
      letter-spacing: 0px;    }      
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: inline-block;
      }
    }
  }
  .wrapper-{{ id }} .block__wrapper h2.heading-medium {
    font-size: var(--Font-Size-Heading-H1);
  }
  .wrapper-{{ id }} .block__wrapper h2.heading-large {
    font-size: 96px;
    font-family: var(--font-family-Title);
    line-height: 83%;
    @media(max-width: 768px) {
      font-size: 64px;
    }
  }
  .custom__bullets>div{
    display: flex;
    align-items: center;
    gap: var(--Spacing-Container-xs);
    margin: var(--Spacing-Container-sm) 0 0 0;
    span {
      font-size: 14px;
      @media(width < 768px) {
        {% comment %} font-size: 13px; {% endcomment %}
      }
    }
  }
  .wrapper-{{ id }} .block__wrapper p.subtitle {
    /* color: #FFF; */
    /* Paragraph/L */
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Medium);
    font-style: normal;
    font-weight: 600;
    line-height: var(--Line-Height-Paragraph-Medium); /* 144.444% */
    margin: 0;
    text-transform: uppercase;
    em{
      display: block;
      font-style: normal;
      @media(max-width: 768px) {
        display: unset;
      }
    }
  }
  .wrapper-{{ id }} .block__wrapper .text__block {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0;
   }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }} belongsToNav" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% assign image = block.settings.image %}
        {% assign image_mobile = block.settings.image_mobile %}
        {% assign pretitle = block.settings.pretitle %}
        {% assign title = block.settings.title %}
        {% assign subtitle = block.settings.subtitle %}
        {% assign button_label_primary = block.settings.btn_label1 %}
        {% assign button_url_primary = block.settings.btn_url1 %}
        {% assign button_label_secondary = block.settings.btn_label2 %}
        {% assign button_url_secondary = block.settings.btn_url2 %}
        {% assign button_label_tertiary = block.settings.btn_label3 %}
        {% assign button_url_tertiary = block.settings.btn_url3 %}
        <div class="swiper-slide">
          {% render 'hero-slider-style', block: block, section: section %}
          <div class="block__wrapper block__wrapper-{{ section.id }}-{{ block.id }}">
            <style>
              .block__wrapper.block__wrapper-{{ section.id }}-{{ block.id }}{
                @media(max-width: 600px) {
                   .image-wrap.adaptive img {                  
                          height: calc(100svh - 162px);
                    }
                  .content__wrapper {
                    padding: 16px
                  }
                    .content__info{
                      justify-content: space-between;
                      height: 100%;
                      width: 100%;
                    }
                    h2{
                      margin-bottom: 16px;
                    }
                    p.pretitle {
                      font-size: var(--Font-Size-Paragraph-Tiny);
                      line-height: var(--Line-Height-Paragraph-Tiny);
                      margin-bottom: 16px;
                  }
                  .custom__bullets {
                      margin-top: var(--Spacing-Container-xl, 24px);
                  }
                  .custom__bullets>div {
                      margin-top: var(--Spacing-Container-md);
                  }
                }
              }
            </style>
            <div class="image-wrap {{ section.settings.banner_height }} ">
              <picture>
                <source media="(max-width:600px)" srcset="{{ image_mobile | image_url: width: 600 }}">
                <source media="(max-width:1600px)" srcset="{{ image | image_url: width: 1600 }}">
                <source media="(max-width:2000px)" srcset="{{ image | image_url: width: 2000 }}">
                <img src="{{ image | image_url: width: image.width }}">
              </picture>
            </div>

            {% comment %}
              {% if image %}
                <div class="image-wrap {{ section.settings.banner_height }} small-hide">
                  {{ image | image_url: width: image.width | image_tag }}
                </div>
              {% else %}
                <div class="image-wrap  {{ section.settings.banner_height }} small-hide">
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
              {% if image_mobile %}
                <div class="image-wrap  large-up-hide medium-hide {{ section.settings.banner_height }}">
                  {{ image_mobile | image_url: width: image_mobile.width | image_tag }}
                </div>
              {% else %}
                <div class=" large-up-hide medium-hide">
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            {% endcomment %}
            <div class="content__wrapper page-width">
              <div class="content  {{ block.settings.content_position }} mobile-{{ block.settings.content_position_m }}">
                <div class="content__info">
                  <div class="--content__info--top-block">
                    {% if pretitle != blank %}
                      <p class="pretitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }} justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                        {% render 'all-icons', name: '5star' -%}
                        <span>{{ pretitle }}</span>
                      </p>
                    {% endif %}
                    {% if title != blank %}
                      <h2 class="info-{{ block.id }} heading-{{ block.settings.heading_size }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }} {% if subtitle == blank %}mb-0{% endif %}">
                        {{ title }}
                      </h2>
                    {% endif %}
                    {% if subtitle != blank %}
                      <p class="subtitle info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                        {{ subtitle }}
                      </p>
                    {% endif %}
                    {% if banner_object.bullet_points != blank %}
                      <div class="custom__bullets info-{{ block.id }} {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                        {% for point in banner_object.bullet_points.value %}
                          <div class="justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                            {% render 'all-icons', name: 'white_tik' %}
                            <span class="info-{{ block.id }}  {{ block.settings.info_align }} mobile-{{ block.settings.info_align_m }}">
                              {{- point -}}
                            </span>
                          </div>
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                  <div class="--content__info--bottom-block">
                    {% if button_label_primary != blank
                      or button_label_secondary != blank
                      or button_label_tertiary != blank
                    %}
                      <div class="btn__wrapper justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }}">
                        {% if button_label_primary != blank %}
                          <a class="button fill_btn" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                        {% endif %}
                        {% if button_label_secondary != blank %}
                          <a class="button fill_btn" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                        {% endif %}
                        {% if button_label_tertiary != blank %}
                          <a class="button fill_btn" href="{{ button_url_tertiary }}">{{ button_label_tertiary }}</a>
                        {% endif %}
                      </div>
                    {% endif %}
                    <div class="nlb__bottom btn__wrapper">
                      <p class="text__block text__block--{{ block.id }} justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }} info-{{ block.id }}">
                        {% render 'all-icons', name: 'shipp' -%}
                        {{- block.settings.freeship }}
                      </p>
                      <p class="text__block text__block--{{ block.id }} justify-{{ block.settings.info_align }} mobile-justify-{{ block.settings.info_align_m }} info-{{ block.id }}">
                        {% render 'all-icons', name: 'secure' -%}
                        {{- block.settings.secure }}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

