{% liquid
  assign id = section.id
%}
{% assign pd_variant = product.selected_or_first_available_variant %}
{% assign meta_related_variants = pd_variant.metafields.custom.related_variant_products.value %}

{% if meta_related_variants != blank %}
  <style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    }
    .wrapper-{{ id }} {
      position: sticky;
      top: 48px;
    }
    .sec-{{ id }} {
      .faq-container-{{ id }} {
          display: grid;
          grid-template-columns: 1.5fr 1fr;
          gap: 32px;
          align-items: stretch;
        @media(max-width: 768px) {
          display: flex;
          flex-direction: column-reverse;
        }
        .pd__feature-image img{
          width: 100%;
          height: auto;
          object-fit: cover;
          aspect-ratio: 4 / 5;
        }
      }
      .pd__feature-image {
        position: sticky;
        top: 48px;
        @media(max-width: 768px) {
          /* display: none; */
          position: static;
          top: unset;
        }
      }
    }

    .wrapper-{{ id }} {
      .variant__card__info {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .button {
        min-width: 200px;
      }
      p.variant__price {
          color: var(--Content-Base-main, #1F2937);
          font-family: var(--font-family-Body, "Archivo Expanded");
          font-size: var(--Font-Size-Paragraph-Regular, 16px);
          font-style: normal;
          font-weight: 250;
          line-height: var(--Line-Height-Paragraph-Regular, 24px);
          margin: 0;
      }
      .variant__card {
        display: grid;
        grid-template-columns: 160px 1fr;
        gap: 16px;
        grid-template-rows: repeat(auto-fill, 200px);
        margin-bottom: 24px;
         @media(max-width: 768px) {
            grid-template-columns: 120px 1fr;
            grid-template-rows: repeat(auto-fill, 150px);
         }
        h4{
          color: var(--Content-Base-main, #1F2937);
          font-family: var(--font-family-Title, "Sainte Colombe");
          font-size: var(--Font-Size-Heading-H5, 20px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Heading-H5, 24px);
          letter-spacing: -0.4px;
          margin: 0 0 8px;
        }
      }
      .rv__image img{
        height: auto;
        max-width: 160px;
        aspect-ratio: 4/5;
        @media(max-width: 768px) {
          max-width: 120px;
        }
      }
      .rv__content p{
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Body, "Archivo Expanded");
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 250;
        line-height: var(--Line-Height-Paragraph-Small, 20px);
        margin: 0;
      }
      .price__atc__wrap {
        display: flex;
        justify-content: space-between;
        align-items: end;
        @media(max-width: 768px) {
          flex-wrap: wrap;
          gap: 12px;
        }
      }

    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        .button {
            width: 100%;
          min-width: unset;
        }
      }
      .faq-container-{{ id }}.page-width {
        padding: 0;
      }
    }
  </style>

  <div class="sec-{{ id }} {% unless section.settings.full_width %}page-width{% endunless %}">
    <h2>{{ section.settings.title | escape }}</h2>
    <div class="faq-container-{{ id }} ">
      <div class="wrapper-{{ id }}">
        {% for meta_related_variant in meta_related_variants %}
          <div class="variant__card">
            <div class="rv__image">
              {% if meta_related_variant.image != blank %}
                {{ meta_related_variant.image | image_url: width: '160x' | image_tag }}
              {% else %}
                {{ product.featured_image | image_url: width: '160x' | image_tag }}
              {% endif %}
            </div>
            <div class="variant__card__info">
              <div class="rv__content">
                <h4>{{ meta_related_variant.product.title }}</h4>
                <p>{{ meta_related_variant.title }}</p>
              </div>
              <div class="price__atc__wrap">
                <p class="variant__price">{{ meta_related_variant.price | money }}</p>
                <div class="button" data-related-variant-btn data-re-variant-id="{{ meta_related_variant.id }}">
                  Add To Cart
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      {% unless product.selected_or_first_available_variant.featured_image == blank %}
        <div class="pd__feature-image">
          {{
            product.selected_or_first_available_variant.featured_image
            | image_url: width: product.selected_or_first_available_variant.featured_image.width
            | image_tag
          }}
        </div>
      {% else %}
        <div class="pd__feature-image">
          {{ product.featured_image | image_url: width: product.featured_image.width | image_tag }}
        </div>
      {% endunless %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Product Details",
  "class": "product-details-new",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Style With"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Product Details"
    }
  ]
}
{% endschema %}
