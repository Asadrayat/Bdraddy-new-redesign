{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      overflow: hidden;
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
    #shopify-section-{{id}}{
      .top--wrapper{
        display: flex;
        justify-content: space-between;
        align-items: center;
        align-self: stretch;
        margin-bottom: var(--Spacing-Container-xl, 40px);
      }
      .title--wrapper{
        display: flex;
        max-width: 800px;
        flex-direction: column;
        justify-content: center;
        {% comment %} text-align: center; {% endcomment %}
        gap: var(--Spacing-Container-xs, 12px);
        flex: 1 0 0;
      }
      .title{
        {% comment %} text-align: center; {% endcomment %}
        margin: 0;
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Title, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H2, 48px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H2, 56px); /* 116.667% */
        letter-spacing: -0.96px;
      }
      .subtitle{
        margin: 0;
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Body, "Sainte Colombe");
        font-size: var(--Font-Size-Paragraph-Medium, 18px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 26px); /* 144.444% */
      }
      .img--wrapper img{
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      .arrow_btn:before, .arrow_btn:after {
          top: 50%;
          transform: translatey(-50%);
      }
      .btn-wrapper{
        @media(max-width: 768px){
          display: none;
        }
      }
      .bottom--wrapper{
        /* display: none; */
        /* @media(max-width: 768px){
          display: block;
          margin-top: var(--Spacing-Container-lg, 24px);
        } */
      }
      .card-grid-container{
        display: grid;
        grid-template-columns: repeat({{ section.settings.grid_desktop }}, minmax(0,1fr));
        gap: var(--Spacing-Container-lg, 40px);
        @media(max-width: 600px){
          grid-template-columns: repeat({{ section.settings.grid_desktop_mbl }}, minmax(0,1fr));
          gap: var(--Spacing-Container-md, 16px);
        }
      }


      /* Swiper Navigation */
      .card-list--wrapper{
        position: relative;
      }
      .swiper-button-next:after,
      .swiper-button-prev:after {
        content: 'none';
      }
      .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
        display: none!important;
      }
      #slider-next--{{ section.id }} {
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          right: 12px;
          transform: translateY(-100%);
        {% else %}
          right: 0;
          transform: translate(50%, -100%);
        {% endif %}
        @media(max-width: 600px){
          /* transform: unset; */
          right: 2px;
        }
      }
      #slider-next--{{ section.id }} svg{
        width: 24px;
        height: 24px;
      }
     #slider-prev--{{ section.id }}{
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        {% if section.settings.full_width %}
          left: 12px;
           transform: translateY(-100%);
        {% else %}
          left: 0;
           transform: translate(-50%, -100%);
        {% endif %}
        @media(max-width: 600px){

        }
     }
     #slider-prev--{{ section.id }} svg{
        width: 24px;
        height: 24px;
     }
    .swiper:not(.swiper-initialized) .swiper-slide {
        max-width: calc(var(--page-width)/{{ section.settings.slides_per_view }}) !important;
        margin-right: 16px;
        overflow: hidden;
        @media(max-width: 600px){
          max-width: calc(var(--page-width)/{{ section.settings.slides_per_view_mbl }}) !important;
        }
    }
    .swiper-scrollbar-{{ section.id }} {
      position: relative !important;
      left: 0 !important;
      bottom: 0 !important;
      margin: var(--Spacing-Container-md) 0;
      height: 1px !important;
      opacity: 1 !important;
      width: 100% !important;
      cursor: pointer;
      padding-block: 8px;
      background: transparent;
      .swiper-scrollbar-drag {
        background: #00094b;
        display: block !important;
        height: 1px;
      }
    }
    .swiper-scrollbar-{{ section.id }}::before {
      position: absolute;
      content: "";
      background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
      top: 50%;
      left: 0;
      width: 100%;
      height: 1px;
    }
  }
</style>
{% liquid
  assign product_url = section.settings.product.url
%}
<div class="sec-{{ id }} belongsToNav" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top--wrapper">
        <div class="title--wrapper">
          <a href="{{ product_url }}">
            {% if section.settings.title != blank  %}
              <h2 class="title">{{ section.settings.title }}</h2>
            {% elsif section.settings.product %}
              <h2 class="title">{{ section.settings.product.title }}</h2>
            {% endif %}
          </a>
          {% if section.settings.subtitle != blank %}
            <h2 class="subtitle">{{ section.settings.subtitle }}</h2>
          {% endif %}
        </div>
      </div>
      <div class="card-list--wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% unless block.settings.type == 'card' %}
                  <div class="swiper-slide">
                    <a href="{{ product_url }}">
                      <div class="img--wrapper">
                        {% if block.settings.img != null %}
                          {{
                            block.settings.img
                            | image_url: width: block.settings.img.width
                            | image_tag: class: 'card--image'
                          }}
                        {% else %}
                          {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                      </div> 
                    </a>
                  </div>
                {% endunless %}
              {% endfor %}
            </div>
            <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
          </div>
          {% if section.settings.show_slider_arrow %}
            <div class="swiper-button-next" id="slider-next--{{ section.id }}">
              {% render 'all-icons', name: 'right_arrow' %}
            </div>
            <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
              {% render 'all-icons', name: 'left_arrow' %}
            </div>
          {% endif %}
        {% else %}
          <div class="card-grid-container">
            {% for block in section.blocks %}
                {% unless block.settings.type == 'card' %}
                  <div class="card-grid">
                    <a href="{{ product_url }}">
                      <div class="img--wrapper">
                        {% if block.settings.img != null %}
                          {{
                            block.settings.img
                            | image_url: width: block.settings.img.width
                            | image_tag: class: 'card--image'
                          }}
                        {% else %}
                          {{ 'image' | placeholder_svg_tag }}
                        {% endif %}
                      </div> 
                    </a>
                  </div>
              {% endunless %}
            {% endfor %}
          </div>
        {% endif %}
      </div>      
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 16,
      scrollbar: {
        el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
        draggable: true
        // hide: true
      },
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 24,
        },
      },
      navigation: {
        nextEl: "#slider-next--{{ section.id }}",
        prevEl: "#slider-prev--{{ section.id }}",
      }
    });
  });
</script>

