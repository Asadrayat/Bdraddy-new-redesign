{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% unless section.settings.bg == blank %}
      background: url("{{ section.settings.bg | image_url: width:section.settings.bg.width  }}");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;      
    {% endunless %}
    max-width: 100%;
    overflow: hidden;
  }
    .block_box {
        position: relative;
    }
  @media(max-width: 600px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .sec-{{ id }} {

    .title--wrapper p{
        color: var(--Content-Inverted-main, #F3F4F6);

        /* Headings/H3 */
        font-family: var(--font-family-Heading, Gotham);
        font-size: var(--Font-Size-Heading-H3, 20px);
        font-style: normal;
        font-weight: 700;
        line-height: var(--Line-Height-Heading-H3, 24px); /* 120% */
        text-transform: uppercase;
        margin: var(--Spacing-Container-md) 0;
      @media(max-width: 768px){
      } 
    }
    .swiper {
        overflow: unset;
        padding: var(--Spacing-Container-xxl) 0;        
    }
    .image--wrapper img{
      width: 100%;
      height: auto;
      object-fit: cover;
        aspect-ratio: 4/5;      
    }
    .arrow_btn:before, .arrow_btn:after {
        top: 50%;
        transform: translatey(-50%);
    }
    .content__box {
        background: #E8D8C2;
        max-width: 320px;
        padding: var(--Spacing-Container-lg, 24px) var(--Spacing-Container-md, 16px);
        position: absolute;
        bottom: 0;
        right: 0;
    }
    .content__box h3{
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Heading, Gotham);
        font-size: var(--Font-Size-Heading-H3, 20px);
        font-style: normal;
        font-weight: 700;
        line-height: var(--Line-Height-Heading-H3, 24px);
        text-transform: uppercase;
        margin: 0 0 var(--Spacing-Container-xxl);        
    }
    .content__box p{
        color: var(--Content-Base-main, #1F2937);

        /* Paragraph/Medium */
        font-family: var(--font-family-Body, Gotham);
        font-size: var(--Font-Size-Paragraph-Medium, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 22px); /* 157.143% */      
        margin: var(--Spacing-Container-sm) 0;          
    }
      /* Swiper Styling */
      .--slider-wrapper{
        position: relative;
      }
      .swiper:not(.swiper-initialized) .swiper-slide {
          max-width: calc(var(--page-width)/4) !important;
          margin-right: 16px;
          overflow: hidden;
      }
      {% comment %} .mfc__nav-scroll__wrapp {
        display: flex;
        gap: 40px;
        align-items: center;
        padding: 12px;
      }
      .swiper-scrollbar-{{ section.id }} {
        position: relative !important;
        left: 0 !important;
        bottom: 0 !important;
        /* margin: var(--Spacing-Container-sm) 0 0 0; */
        height: 3px !important;
        opacity: 1 !important;
        width: 100% !important;
        cursor: pointer;
        padding-block: 16px;
        z-index: 1;
        background: transparent;
        .swiper-scrollbar-drag {
          background: #000;
          display: block !important;
          height: 2px;
        }
      }
      .swiper-scrollbar-{{ section.id }}::before {
        position: absolute;
        content: "";
        background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
        top: 50%;
        left: 0;
        width: 100%;
        height: 2px;
      } {% endcomment %}
  }
  
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="title--wrapper">
        <p>{{ section.settings.heading }}</p>
      </div>
      <div class="--slider-wrapper swiper__container">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="block_box">                    
                <div class="image--wrapper">
                  {% if block.settings.image != null %}
                    {{
                      block.settings.image
                      | image_url: width: block.settings.image.width
                      | image_tag: class: 'slide--image'
                    }}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                <div class="content__box">
                    <h3>{{ block.settings.title }}</h3>
                    <p>{{  block.settings.text}}</p>
                    <a class="arrow_btn" href="{{ block.settings.url }}">{{ block.settings.label }}</a>
                </div>
                </div>
              </div>
            {% endfor %}
          </div>
          {% comment %} <div class="mfc__nav-scroll__wrapp">
            <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
          </div> {% endcomment %}
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  (function() {
    function fcinitSwiper(classname) {
      if(classname){
        new Swiper(classname, {
          slidesPerView: 1.2,
          spaceBetween: 20,
          scrollbar: {
            el: ".swiper-scrollbar-{{ section.id }}.swiper-scrollbar",
            draggable: true,
            hide: false
          },
          breakpoints: {
            200: {
              slidesPerView: 1.2,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 2.5,
              spaceBetween: 48,
            },

          },
        });
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      fcinitSwiper(".swiper-{{ section.id }}");
    });

    // Optional: Add an event listener to handle window resize events
    window.addEventListener('resize', function() {
      fcinitSwiper(".swiper-{{ section.id }}"); // Re-initialize Swiper on window resize
    });

  })();
</script>

