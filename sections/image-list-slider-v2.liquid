            "id": "text",
            "label": "Text"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label"          
        },        
        {
            "type": "url",
            "id": "url",
            "label": "Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image List Slider V2"
    }
  ]
}
{% endschema %}


