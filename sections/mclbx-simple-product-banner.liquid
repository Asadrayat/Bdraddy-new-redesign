{% liquid
  assign id = section.id
%}

<style>
      .sec-{{ id }} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        position: relative;
      }

      @media(max-width: 600px) {
        .sec-{{ id }} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }


    .sec-{{ id }}{
     .--image-wrapper img {
        width: 100%;
        height: auto;
        filter: brightness(0.8);
        }
      .--image-wrapper svg{
          display: block;
          width: 100%;
          height: 100%;
          background: #202A37;
      @media(max-width: 768px){
              min-height: 50vh;
              aspect-ratio: 2/3;
      }
      {% comment %} aspect-ratio: 16/9; {% endcomment %}
      }
    .wrapper-{{ id }} {
      box-sizing: border-box;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: flex-start;
      align-items: flex-end;
      padding: var(--Spacing-Section-Vertical-Padding, 64px) var(--Spacing-Section-Horizontal-Padding, 128px);
      @media(max-width: 768px){
          padding: var(--Spacing-Container-xl, 24px) var(--Spacing-Section-Horizontal-Padding, 16px);
      }

    }
    .--text-container {
      color: #F3F4F6;
      max-width: 640px;
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-xxl, 48px);
      @media(max-width: 768px){

      max-width: 100%;
      height: 100%;
      justify-content: space-between;
      }
  }
  h2.--section-title {
      color: inherit;
      font-size: 28px;
      line-height: 38px;
      letter-spacing: -0.84px;
      text-transform: uppercase;
      margin: 0;
      @media(max-width: 768px){
          font-size: 22px;
          line-height: 30px;
          letter-spacing: -0.66px;
      }
  }
  .--text-block-wrapper {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: var(--Spacing-Container-xl, 32px);
      @media(max-width: 768px){
      grid-template-columns: minmax(0,1fr);
      }
  }
  .--single-blocks {
      display: flex;
      flex-direction: column;
      gap: 8px;
  }
  h3.--title {
      color: inherit;
      text-transform: uppercase;
      margin: 0;
  }
  .--content {
      font-size: var(--Font-Size-Paragraph-Medium, 14px);
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Medium, 22px);
  }
    }
</style>

<div class="sec-{{ id }}">
  <div class="--image-wrapper">
    {% if section.settings.image == blank and section.settings.image_mobile == blank %}
      <svg xmlns="http://www.w3.org/2000/svg" width="2000" height="1000" viewBox="0 0 2000 1000" fill="#202A37">
        <path d="M0 0H2000V1000H0V0Z" fill="#202A37"/>
      </svg>
    {% else %}
      <picture>
        <source media="(max-width:768px)" srcset="{{ section.settings.image_mobile | image_url: width: 500 }}">
        <source media="(max-width:1300px)" srcset="{{ section.settings.image | image_url: width: 1500 }}">
        <source media="(max-width:1600px)" srcset="{{ section.settings.image | image_url: width: 1700 }}">
        <source media="(max-width:2000px)" srcset="{{ section.settings.image | image_url: width: 2000 }}">

        <img src="{{ section.settings.image | image_url: width: section.settings.image.width }}" style="width:100%;">
      </picture>
    {% endif %}
  </div>

  <div class="wrapper-{{ id }} {% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="--text-container">
      <h2 class="--section-title">{{ section.settings.title }}</h2>
      <div class="--text-block-wrapper">
        {% for block in section.blocks %}
          <div class="--single-blocks">
            <h3 class="--title">{{ block.settings.title }}</h3>
            <div class="--content">
              {{ block.settings.content }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

