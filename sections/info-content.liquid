{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--Spacing-Container-xxl);
      align-items: start;
      position: relative;  
      @media(max-width: 768px)   {
        grid-template-columns: 1fr;
      }
    }
    .left__, .right__ {
        display: flex;
        flex-direction: column;
        gap: var(--Spacing-Container-xl);
        @media(min-width: 768px)   {
          position: sticky;
          top: 15%;   
        }        
     
    }    
    .left__ {
      h2 {
          margin: 0;
          text-transform: capitalize;
      }
      p {
        color: var(--Content-Base-main, #1F2937);

        /* Paragraph/Medium */
        font-family: var(--font-family-Body, Gotham);
        font-size: var(--Font-Size-Paragraph-Medium, 16px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Medium, 24px); /* 150% */
        letter-spacing: -0.32px;
        margin: 0;
      }
      .left__cards__ {
          display: flex;
          flex-direction: column;
          gap: var(--Spacing-Container-md);
          p.card__ {
            margin: 0;
            display: flex;
            padding: var(--Spacing-Container-md, 16px);
            align-items: center;
            gap: var(--Spacing-Container-lg, 24px);
            align-self: stretch;
            border-radius: 0;
            border: 1px solid #E6E6D4;
            background: #F4F4ED;
            transition: all 0.4s ease-in-out;
            &:hover {
              transform: scale(1.001);
              box-shadow: 1px 1px 4px #1f2937a8;
            }            
          }
          strong {
              color: #1F3E2F;
              font-family: var(--font-family-Heading, "Sainte Colombe");
              font-size: 32px;
              font-style: normal;
              font-weight: 700;
              line-height: var(--Line-Height-Heading-H2, 40px);
              text-transform: capitalize;
          }
      }
      .rte__ {
          color: var(--Content-Base-main, #1F2937);
          font-family: var(--font-family-Body, Gotham);
          font-size: var(--Font-Size-Paragraph-Large, 18px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Paragraph-Large, 28px);
          letter-spacing: -0.45px;
          p {
            margin: 0;
          }
      }
    }
    .right__ img{
      border-radius: 8px;
      background: #EEEDE6;
      display: flex;
      width: 50px;
      height: 50px;
      padding: 12px;
      justify-content: center;
      align-items: center;
      gap: 8px;
      aspect-ratio: 1/1;
      object-fit: cover;
    }
    .right__cards__ {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--Spacing-Container-md, 16px);
        align-self: stretch;
    }    
    .right__cards__ p {
        color: #1F3E2F;
        font-family: var(--font-family-Body, Gotham);
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Small, 20px);
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .right__cards__ strong {
        color: #1F3E2F;
        font-family: var(--font-family-Heading, "Sainte Colombe");
        font-size: var(--Font-Size-Heading-H3, 20px);
        font-style: normal;
        font-weight: 700;
        line-height: var(--Line-Height-Heading-H3, 24px);
    }
    .right__card__ {
        border-radius: 0;
        border-top: 1px solid #D7D7D7;
        border-right: 1px solid #D7D7D7;
        border-bottom: 1px solid #D7D7D7;
        background: #FFF;
        display: flex;
        padding: var(--Spacing-Container-md, 16px);
        align-items: center;
        gap: var(--Spacing-Container-md, 16px);
        align-self: stretch;
        transition: all 0.4s ease-in-out;
        &:hover {
          transform: scale(1.001);
          box-shadow: 1px 1px 4px #1f2937a8;
        }           
    }    
  }

  @media(max-width: 600px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}" id="{{ section.settings.sec_id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="left__">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.text }}</p>
        <div class="left__cards__">
          {% for block in section.blocks %}
            {% if block.type == 'left' %}
              <p class="card__">{{ block.settings.text }}</p>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="right__">
        <div class="rte__">{{ section.settings.rte }}</div>
        <div class="right__cards__">
          {% for block in section.blocks %}
            {% if block.type == 'right' %}
              <div class="right__card__">
                {% unless block.settings.icon == blank %}
                  {{ block.settings.icon | image_url: width: block.settings.icon.width | image_tag }}
                {% endunless %}
                <p>{{ block.settings.text }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

