{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .heading-{{ id }}{
    margin:  0 0 var(--Spacing-Container-xl) 0;
    max-width: 800px;
    h2{
      color: #000;
      font-family: var(--font-family-Title);
      font-size: var(--Font-Size-Heading-H2);
      line-height: var(--Line-Height-Heading-H2); /* 125% */
      letter-spacing: -0.64px;
      margin:  0 0 var(--Spacing-Container-md) 0;
    }
    p{
      color: #000;
      font-family: var(--font-family-Body);
      font-size: var(--Font-Size-Paragraph-Regular);
      line-height: var(--Line-Height-Paragraph-Regular); /* 150% */
      margin: 0;
    }
  }
  .items-{{ id }}{
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-gap: 24px;
  }


  .item-{{ id }}{
    position: relative;
  }
  .item-{{ id }} > a{
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .item-tag-{{ id }}{
    position: absolute;
    top: 16px;
    right: 16px;
    color: var(--Content-Inverted-main);
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Regular);
    line-height: var(--Line-Height-Paragraph-Regular); /* 150% */
    padding: 8px 24px;
    border: 1px solid rgba(168, 168, 168, 0.34);
    background: rgba(9, 14, 63, 0.70);
  }
  .item-image-{{ id }} img, .item-image-{{ id }} svg{
    display: block;
    width: 100%;
    height: 572px;
    object-fit: cover;
    transition: all 0.4s ease-in-out;
  }

  .item-contents-{{ id }}{
    margin: 12px 0 0;
    h3{
      color: var(--Content-Base-main);
      font-family: var(--font-family-Title);
      font-size: var(--Font-Size-Heading-H5);
      line-height: var(--Line-Height-Heading-H5); /* 120% */
      letter-spacing: -0.4px;
      margin: var(--Spacing-Container-md) 0;
    }
    p{
      color: var(--Content-Base-main);
      font-family: var(--font-family-Body);
      font-size: var(--Font-Size-Paragraph-Regular);
      line-height: var(--Line-Height-Paragraph-Regular); /* 150% */
      margin: 0;
    }
  }

  @media screen and (min-width: 768px){
    .item-contents-sm{
      display: none;
    }
  }
  @media screen and (max-width: 768px){
    .item-contents-lg{
      display: none;
    }
    .items-{{ id }}{
      display: flex;
      overflow-x: auto;
      gap: 16px;
    }
    .item-{{ id }}{
      min-width: 90%;
      max-width: 330px;
    }
    .item-image-{{ id }} img, .item-image-{{ id }} svg{
      height: 100%;
      aspect-ratio: 320 / 361;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.title != blank or section.settings.text != blank %}
        <div class="heading-{{ id }}">
          {% if section.settings.title != blank %}
            <h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
          {% endif %}
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="items-{{ id }}">
          {% for block in section.blocks %}
            <style>
              .item-image-{{ id }}{
                overflow: hidden;
              }
              .item-{{ id }}--block{{ id }}:hover img {
                scale: 1.05;
              }
            </style>
            <div class="item-{{ id }} item-{{ id }}--block{{ id }}">
              <div class="item-image-{{ id }}">
                {% if block.settings.article.image %}
                  {{ block.settings.article.image | image_url: width: block.settings.article.image.width | image_tag }}
                {% elsif block.settings.image %}
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
                {% else %}
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1 -%}
                  {%- assign placeholder_image = 'blog-apparel-' | append: placeholder_image_index -%}
                  {{ placeholder_image | placeholder_svg_tag: 'blog-placeholder-svg' }}
                {% endif %}
              </div>
              <div class="item-contents-{{ id }}">
                <h3>{{ block.settings.article.title }}</h3>
                {%- if block.settings.article.excerpt.size > 0 or block.settings.article.content.size > 0 -%}
                  <p class="item-contents-lg">
                    {%- if block.settings.article.excerpt.size > 0 -%}
                      {{ block.settings.article.excerpt | strip_html | truncatewords: 30 }}
                    {%- else -%}
                      {{ block.settings.article.content | strip_html | truncatewords: 30 }}
                    {%- endif -%}
                  </p>
                  <p class="item-contents-sm">
                    {%- if block.settings.article.excerpt.size > 0 -%}
                      {{ block.settings.article.excerpt | strip_html | truncatewords: 16 }}
                    {%- else -%}
                      {{ block.settings.article.content | strip_html | truncatewords: 16 }}
                    {%- endif -%}
                  </p>
                {%- endif -%}
              </div>
              <div class="item-tag-{{ id }}">
                {{ block.settings.article.tags.first }}
              </div>
              <a href="{{ block.settings.article.url }}"></a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Blogs",
  "max_blocks": 2,
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Draddy Journal"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "We source the finest natural materials across Italy and work with the most skilled artisans in the country to design and craft our permanent collection directly for you."
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Article",
      "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Article"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Blogs"
    }
  ]
}
{% endschema %}
