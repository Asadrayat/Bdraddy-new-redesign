      align-items: center;
      flex-direction: row;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.bottom_space_between {
      justify-content: space-between;
      align-items: end;
      flex-direction: row;
    }
  }
    .slideshow__section_wrap {
      overflow: hidden;
    }
  @media(max-width: 600px) {
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-middle_left {
      justify-content: center;
      align-items: start;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-middle_center {
      justify-content: center;
      align-items: center;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-middle_right {
      justify-content: center;
      align-items: end;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-top_left {
      justify-content: start;
      align-items: start;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-top_center {
      justify-content: start;
      align-items: center;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-top_right {
      justify-content: start;
      align-items: end;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-bottom_left {
      justify-content: end;
      align-items: start;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-bottom_center {
      justify-content: end;
      align-items: center;
    }
    .section__wrapper-{{ id }}.section__wrapper .content.mobile-bottom_right {
      justify-content: end;
      align-items: end;
    }
  }
</style>

{% assign video = section.settings.video %}
{% assign video_mobile = section.settings.video_m %}
{% assign pretitle = section.settings.pretitle %}
{% assign title = section.settings.title %}
{% assign subtitle = section.settings.subtitle %}
{% assign button_label_primary = section.settings.btn_label1 %}
{% assign button_url_primary = section.settings.btn_url1 %}
{% assign button_label_secondary = section.settings.btn_label2 %}
{% assign button_url_secondary = section.settings.btn_url2 %}

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="section__wrapper section__wrapper-{{ id }}">
        {% if video != blank %}
          <div class="video-wrap {{ section.settings.banner_height }} {% if video_mobile != blank %}small-hide{% endif %}">
            {{
              video
              | video_tag:
                image_size: '700x',
                autoplay: true,
                loop: true,
                muted: true,
                controls: false,
                playsinline: true
            }}
          </div>
        {% endif %}
        {% if video_mobile != blank %}
          <div class="video-wrap  {{ section.settings.banner_height }} large-up-hide medium-hide">
            {{
              video_mobile
              | video_tag:
                image_size: '500x',
                autoplay: true,
                loop: true,
                muted: true,
                controls: false,
                playsinline: true
            }}
          </div>
        {% endif %}
        <div class="content__wrapper {% if section.settings.show_pagination %}pagination__padding{% endif %}">
          <div class="content page-width {{ section.settings.content_position }} mobile-{{ section.settings.content_position_m }}">
            <div class="content__info">
              {% if pretitle != blank %}
                <p class="pretitle info-{{ id }} {{ section.settings.info_align }} mobile-{{ section.settings.info_align_m }}">
                  {{ pretitle }}
                </p>
              {% endif %}
              {% if title != blank %}
                <h2 class="info-{{ id }} heading-{{ section.settings.heading_size }} {{ section.settings.info_align }} mobile-{{ section.settings.info_align_m }}">
                  {{ title }}
                </h2>
              {% endif %}
              {% if subtitle != blank %}
                <p class="subtitle info-{{ id }} {{ section.settings.info_align }} mobile-{{ section.settings.info_align_m }}">
                  {{ subtitle }}
                </p>
              {% endif %}
              {% if button_label_primary != blank or button_label_secondary != blank %}
                <div class="btn__wrapper justify-{{ section.settings.info_align }} mobile-justify-{{ section.settings.info_align_m }}">
                  {% if button_label_primary != blank %}
                    <a class="button" href="{{ button_url_primary }}">{{ button_label_primary }}</a>
                  {% endif %}
                  {% if button_label_secondary != blank %}
                    <a class="button" href="{{ button_url_secondary }}">{{ button_label_secondary }}</a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

