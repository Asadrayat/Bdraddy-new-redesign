    justify-content: start;
    align-items: start;
  }
  .section__wrapper-{{ id }}.section__wrapper .content.top_center {
    justify-content: start;
    align-items: center;
  }
  .section__wrapper-{{ id }}.section__wrapper .content.top_right {
    justify-content: start;
    align-items: end;
  }
  .section__wrapper-{{ id }}.section__wrapper .content.bottom_left {
    justify-content: end;
    align-items: start;
  }
  .section__wrapper-{{ id }}.section__wrapper .content.bottom_center {
    justify-content: end;
    align-items: center;
  }
  .section__wrapper-{{ id }}.section__wrapper .content.bottom_right {
    justify-content: end;
    align-items: end;
  }
  .slideshow__section_wrap {
    overflow: hidden;
  }
