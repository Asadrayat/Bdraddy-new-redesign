{% liquid
  assign id = section.id
%}

<style>
          .sec-{{ id }} {
            box-sizing: border-box;
            margin-top: {{section.settings.margin_top | append: 'px'}};
            margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
            padding-top: {{section.settings.padding_top | append: 'px'}};
            padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
            /* background: #F4EBDB; */
            background: {{ section.settings.bg-color }};
          }

          @media(max-width: 600px) {
            .sec-{{ id }} {
              margin-top: {{section.settings.margin_top_m | append: 'px'}};
              margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
              padding-top: {{section.settings.padding_top_m | append: 'px'}};
              padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
            }
          }

     .sec-{{ id }} .swiper-slide {
          opacity: 0.3;
     }
     .sec-{{ id }} .swiper-slide-active {
          opacity: 1;
     }
        .sec-{{ id }} {

      .wrapper-{{ id }} {
          display: flex;
          flex-direction: column;
          gap: var(--Spacing-Container-lg, 40px);
      }

        .--top-block {
            display: flex;
            flex-direction: column;
            gap: var(--Spacing-Container-xs, 12px);
            margin-bottom: var(--Spacing-Container-md);
        }
        .--section-name {
            color: #000;
            text-align: center;
            font-family: var(--font-family-Control, "Archivo Expanded");
            font-size: 20px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px;
            letter-spacing: 1.2px;
            text-transform: uppercase;
        }
        h2.--section-title {
            color: #000;
            text-align: center;
            letter-spacing: -0.96px;
            margin: 0;
        }


        /* Slider Wrapper */

        .--single-card {
            display: grid;
            grid-template-columns: repeat(2, minmax(0,1fr));
            background: #fff;
            @media(max-width:768px){
                display: flex;
                flex-direction: column;
            }
        }
          .--card-image {
              aspect-ratio: 1;
              object-fit: cover;
              display: block;
              width: 100%;
              height: 100%;
             @media(max-width:768px){
               aspect-ratio: 3/2;
             }
          }
      .--card-content-wrapper {
          display: flex;
          padding: var(--Spacing-Container-md, 24px);
          flex-direction: column;
          justify-content: center;
          gap: var(--Spacing-Container-md, 24px);
          box-sizing: border-box;
          @media(max-width:768px){
            justify-content: flex-start;
          }
      }
      h4.--card-title {
          color: var(--Content-Base-main, #1F2937);
          letter-spacing: -0.48px;
          margin: 0;
      }
      .--card-content p {
          color: var(--Content-Base-main, #1F2937);
          font-family: var(--font-family-Body, "Sainte Colombe");
          font-size: var(--Font-Size-Paragraph-Regular, 16px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Paragraph-Regular, 24px);
          margin: 0;
      }
          .hero_slider__nav_icon{
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
             @media(max-width:768px){
               display: flex;
             }
          }

    /* .--title-list  */
    .--title-list {
        display: flex;
      @media(max-width: 768px){
        display: none;
      }
    }
    .--section-button_.button {
      width: max-content;
      margin: var(--Spacing-Container-md) auto 0;

    }
    button.--title-button.--active {
      border-top: 1px solid var(--Border-Base-dense, #4B5563);
    }
    button.--title-button {
        color: var(--Content-Base-main, #1F2937);
        font-family: var(--font-family-Body, "Sainte Colombe");
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Small, 20px);
        border: none;
        /* border-top: 1px solid var(--Border-Base-dense, #4B5563); */
        border-top: 1px solid var(--Border-Base-main, #D1D5DB);
        margin: 0;
        padding-top: var(--Spacing-Container-sm, 16px);
        flex-grow: 1;
        text-align: left;
    }


        a.--section-button {
            display: block;
            color: var(--Content-Base-main, #1F2937);
            text-align: center;
            font-family: var(--font-family-Control, "Archivo Expanded");
            font-size: var(--Font-Size-UI-Controls-Control-Button-Small, 16px);
            font-style: normal;
            font-weight: 400;
            line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 16px);
            text-decoration-line: underline;
            text-transform: uppercase;
            padding: var(--Spacing-Container-xs, 12px) 0;
        }


        .next-{{ section.id }} {
          right: 0
        }
        .prev-{{ section.id }} {
          opacity: 0
        }
  .hero_slider__nav_icon {
        width: 40px;
        height: 40px;
        display: flex;
        background: #fff;
        line-height: 1;
        position: absolute;
        top: 50%;
        z-index: 1;
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        transform: translateY(-50%);
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        cursor: pointer;
       @media(max-width: 600px) {
         display: flex;
       }
    }




        }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--top-block">
        <div class="--section-name">{{ section.settings.subtitle }}</div>
        <h2 class="--section-title">{{ section.settings.title }}</h2>
      </div>
      <div class="--slider-wrapper">
        <div class="swiper swiper-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide" data-title="{{ block.settings.title }}">
                <div class="--single-card">
                  <div class="--card-image-wrapper">
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag: class: '--card-image'
                      }}
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: '--card-image' }}
                    {% endif %}
                  </div>
                  <div class="--card-content-wrapper">
                    <h4 class="--card-title">{{ block.settings.title }}</h4>
                    <div class="--card-content">
                      {{ block.settings.content }}
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="prev-{{ section.id }} hero_slider__nav_icon hidden">
            {% render 'all-icons', name: 'left_arrow' %}
          </div>
          <div class="next-{{ section.id }} hero_slider__nav_icon hidden">
            {% render 'all-icons', name: 'right_arrow' %}
          </div>
        </div>
      </div>
      <div class="--title-list">
        {% for block in section.blocks %}
          <button
            class="--title-button {% if forloop.first %}--active{% endif %}"
            data-title="{{ block.settings.title }}"
          >
            {{ block.settings.title }}
          </button>
        {% endfor %}
      </div>

      {% if section.settings.button_label != blank %}
        <a class="--section-button_ button" href="{{ section.settings.button_url }}">
          {{- section.settings.button_label -}}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<script>
  swiperSlider["{{ id }}"] = {};
  swiperSlider["{{ id }}"].buttons = document.querySelectorAll(".sec-{{ id }} .--title-list button");
  swiperSlider["{{ id }}"].activeIndex = 1;
  swiperSlider["{{ id }}"].slides = {{section.blocks.size | default: 0 }};

   swiperSlider["{{ id }}"].slider = new Swiper(".swiper-{{ id }}", {
     slidesPerView: 1.2,
     spaceBetween: 16,
     allowTouchMove: false,
     loop: true,
     pagination: {
       el: ".swiper-pagination",
       clickable: true,
     },
     breakpoints: {
       768: {
         slidesPerView: 1.6,
         spaceBetween: 40,
       }
     },
   });

  swiperSlider["{{ id }}"].gotoActiveSlide = (index=0) => {
    swiperSlider["{{ section.id }}"].slider.slideTo(index)
    swiperSlider["{{ id }}"].buttons.forEach((b,i) => i === index ? b.classList.add("--active"):b.classList.remove("--active"))
  }

  swiperSlider["{{ id }}"].incrementDecrement = (index=0) => {
    swiperSlider["{{ id }}"].activeIndex = swiperSlider["{{ id }}"].activeIndex + index;

    if(swiperSlider["{{ id }}"].activeIndex <= 1) {
      document.querySelector(".prev-{{ section.id }}").style.opacity = '0';
      document.querySelector(".next-{{ section.id }}").style.opacity = '0';
      
      swiperSlider["{{ id }}"].activeIndex = 1
    } else if (swiperSlider["{{ id }}"].activeIndex >= swiperSlider["{{ id }}"].slides) {
      document.querySelector(".prev-{{ section.id }}").style.opacity = '0';
      document.querySelector(".next-{{ section.id }}").style.opacity = '0';

      swiperSlider["{{ id }}"].activeIndex = swiperSlider["{{ id }}"].slides
    } else {
      document.querySelector(".next-{{ section.id }}").style.opacity = '0';
      document.querySelector(".prev-{{ section.id }}").style.opacity = '0';

      swiperSlider["{{ id }}"].activeIndex = swiperSlider["{{ id }}"].activeIndex;
    }

    swiperSlider["{{ id }}"].gotoActiveSlide(swiperSlider["{{ id }}"].activeIndex - 1)
  }
  
  if(document.querySelector(".prev-{{ section.id }}")) {
    document.querySelector(".prev-{{ section.id }}").addEventListener("click", e => {
      swiperSlider["{{ id }}"].incrementDecrement(-1)
    })
  }

  if(document.querySelector(".next-{{ section.id }}")) {
    document.querySelector(".next-{{ section.id }}").addEventListener("click", e => {
      swiperSlider["{{ id }}"].incrementDecrement(1)
    })
  }

  if(swiperSlider["{{ id }}"].buttons) {
    swiperSlider["{{ id }}"].buttons.forEach((btn, index) => {
       btn.addEventListener("click", e => {
         swiperSlider["{{ id }}"].activeIndex = index+1;
         swiperSlider["{{ id }}"].incrementDecrement()
         if(index === 2){
           const sliders = document.querySelectorAll(".sec-{{ id }} .swiper-slide")
           sliders.forEach(slider => {
             slider.classList.remove("swiper-slide-active")
              sliders[index].classList.add("swiper-slide-active")
           })
         }         
       })
     })
  }


