{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .sec-{{ id }} {
    width: 100%;
  }

  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
  }

  .block-{{ id }} {
    grid-column: span 3;
  }

  .block-{{ id }}[data-width="half"] {
    grid-column: span 3;
  }

  .block-{{ id }}[data-width="one-third"] {
    grid-column: span 2;
  }

  .image-{{ id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-{{ id }} video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .wrapper-{{ id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }

    .wrapper-{{ id }} .video-{{ id }} {
      grid-column: 1 / -1;
    }

    .wrapper-{{ id }} .image-{{ id }} {
      grid-column: span 1;
    }
  }
</style>
<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="block-{{ id }} image-{{ id }}" data-width="{{ block.settings.width }}">
              {% if block.settings.image %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              {% endif %}
            </div>
          {% when 'video' %}
            <div class="block-{{ id }} video-{{ id }}" data-width="{{ block.settings.width }}">
              {% if block.settings.video %}
                {{ block.settings.video | video_tag: image_size: '500x', playsinline: true, loop: true, autoplay: true }}
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Look Book Gallery",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "width",
          "label": "Desktop Width",
          "options": [
            {
              "value": "half",
              "label": "Half Width (1/2)"
            },
            {
              "value": "one-third",
              "label": "One Third Width (1/3)"
            }
          ],
          "default": "half"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
        {
          "type": "select",
          "id": "width",
          "label": "Desktop Width",
          "options": [
            {
              "value": "half",
              "label": "Half Width (1/2)"
            },
            {
              "value": "one-third",
              "label": "One Third Width (1/3)"
            }
          ],
          "default": "half"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Look Book Gallery"
    }
  ]
}
{% endschema %}