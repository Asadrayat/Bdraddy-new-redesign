{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} {
    .wrapper-{{ id }}{
      {% if section.settings.show_bg %}
         padding: 80px var(--Spacing-Container-lg);
        background-image: url('{{ section.settings.bg_img | image_url: width: section.settings.bg_img.width }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        @media(max-width: 768px) {
          padding: var(--Spacing-Container-lg) var(--Spacing-Container-md);
        }
      {% endif %}
    }
    .block-container{
        display: grid;
        grid-template-columns: repeat(2, minmax(0,1fr));        
      @media(max-width: 600px){
        grid-template-columns: minmax(0,1fr);
      }
    }
    .block-wrapper{
      position: relative;
    }
    .absolute-link {
        position: absolute;
        display: block!important;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 3;
        cursor: pointer;
    }
    .img-wrapper{
      line-height: 0;
      position: relative;
      &::after {
        position: absolute;
        z-index: 1;
        background: transparent;
        content: "";
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    }
    .img-wrapper img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 1;
      @media(max-width: 600px){
        {% if section.blocks.size == 2 %}
          aspect-ratio: 2/3;
        {% else %}
          aspect-ratio: 1/2;
        {% endif %}
      }
    }
    .img-wrapper video {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 1;
      @media(max-width: 600px){
        {% if section.blocks.size == 2 %}
          aspect-ratio: 2/3;
        {% else %}
          aspect-ratio: 1/2;
        {% endif %}
      }
    }
    .img-wrapper.custom :is(img,video) {
      height: auto;
      max-height: {{ section.settings.banner_max_height | append:'px' }};
      @media(max-width: 600px) {
        {% if section.settings.banner_max_height_m %}
          max-height: {{ section.settings.banner_max_height_m | append:'px' }};
        {% else %}
          max-height: {{ section.settings.banner_max_height | append:'px' }};
        {% endif %}
      }
    }      
    .desktop-img{
      @media (max-width: 600px) {
        display: none;
      }
    }
    .mobile-img{
      @media (min-width: 601px) {
        display: none;
      }
    }

    .text-container{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      z-index: 1;
      padding: var(--Spacing-Section-Section-Vertical-Padding, 32px) var(--Spacing-Section-Section-Horizontal-Padding, 12px);
     {% if section.settings.alignment == 'top_left' %}
       justify-content: start;
       align-items: start;
     {% elsif section.settings.alignment == 'top_center' %}
       justify-content: center;
       align-items: start;
     {% elsif section.settings.alignment == 'top_right' %}
       justify-content: end;
       align-items: start;
     {% elsif section.settings.alignment == 'middle_left' %}
       justify-content: start;
       align-items: center;
     {% elsif section.settings.alignment == 'middle_center' %}
       justify-content: center;
       align-items: center;
     {% elsif section.settings.alignment == 'middle_right' %}
       justify-content: end;
       align-items: center;
     {% elsif section.settings.alignment == 'bottom_left' %}
       justify-content: start;
       align-items: end;
     {% elsif section.settings.alignment == 'bottom_center' %}
       justify-content: center;
       align-items: end;
     {% else %}
       justify-content: end;
       align-items: end;
     {% endif %}
      @media screen and (max-width: 600px){
       {% if section.settings.mobile_alignment == 'top_left' %}
         justify-content: start;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_center' %}
         justify-content: center;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'top_right' %}
         justify-content: end;
         align-items: start;
       {% elsif section.settings.mobile_alignment == 'middle_left' %}
         justify-content: start;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'middle_center' %}
         justify-content: center;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'middle_right' %}
         justify-content: end;
         align-items: center;
       {% elsif section.settings.mobile_alignment == 'bottom_left' %}
         justify-content: start;
         align-items: end;
       {% elsif section.settings.mobile_alignment == 'bottom_center' %}
         justify-content: center;
         align-items: end;
       {% else %}
         justify-content: end;
         align-items: end;
       {% endif %}
      }
    }
    .text-wrapper{
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: var(--Spacing-Container-md, 16px);
      max-width: 480px;
     {% if section.settings.content_alignment == 'left' %}
       align-items: start;
     {% elsif section.settings.content_alignment == 'right' %}
       align-items: end;
     {% else %}
       align-items: center;
     {% endif %}
    }
    .logo__wrap img{
        width: 100%;
        height: auto;
        object-fit: cover;
    }  
    p.caption {
        margin: 0;
        font-size: var(--Font-Size-Heading-H3);
        text-transform: uppercase;
        {% if section.settings.content_alignment == 'left' %}
        text-align: left;
        {% elsif section.settings.content_alignment == 'right' %}
        text-align: right;
        {% else %}
        text-align: center;
        {% endif %}        
    }      
    .title-wrapper{
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-sm, 8px);
      margin: 0;
     {% if section.settings.content_alignment == 'left' %}
       text-align: left;
     {% elsif section.settings.content_alignment == 'right' %}
       text-align: right;
     {% else %}
       text-align: center;
     {% endif %}
    }
    .title{
      margin: 0;
      font-family: var(--font-family-Title);
      font-size: var(--Font-Size-Heading-H2, 36px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 36px); /* 100% */
    }
    .description{
      margin: 0;
      font-family: var(--font-family-Body);
      font-size: var(--Font-Size-Paragraph-Large, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Large, 20px); /* 142.857% */
     {% if section.settings.content_alignment == 'left' %}
       text-align: left;
     {% elsif section.settings.content_alignment == 'right' %}
       text-align: right;
     {% else %}
       text-align: center;
     {% endif %}
    }    
    .button__wrap {
        display: flex;
        justify-content: center;
     {% if section.settings.content_alignment == 'left' %}
       justify-content: start;
     {% elsif section.settings.content_alignment == 'right' %}
       justify-content: end;
     {% else %}
       justify-content: center;
     {% endif %}        
        align-items: center;
        flex-wrap: wrap;
        gap: 8px;
        @media(max-width: 600px) {
            gap: 20px;
            flex-direction: column;
            width: 100%;
            .button {
              width: 100%;
            }
        }
    }    
  }
</style>

<div class="sec-{{ id }} belongsToNav" id="{{ section.settings.id_nav | downcase }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="block-container">
        {% for block in section.blocks %}
          {% if block.type == 'grid' %}
            <style>
              .img-wrapper--{{ block.id }}::after{
                backdrop-filter: brightness({{ block.settings.overlay }}%);
                @media(max-width: 768px) {
                  backdrop-filter: brightness({{ block.settings.overlay_m }}%);
                }
              }
              .sec-{{ id }} .logo__wrap--{{ block.id }} {
                max-width: {{ block.settings.logo_max_width | append: "px" }};
                @media(max-width: 768px) {
                  max-width: {{ block.settings.logo_max_width_m | append: "px" }};
                }                
              }
              .sec-{{ id }} .title, .sec-{{ id }} .caption,.sec-{{ id }} .description {
                color: {{ block.settings.font_color }};
              }
            </style>
            <div class="block-wrapper {% unless block.settings.show_mbl %}desktop__only{% endunless %}">
              {% if block.settings.enable_clickable_slide == true %}
                <a
                  class="absolute-link"
                  href="
                    {%- if block.settings.btn_url -%}
                      {{ block.settings.btn_url }}
                    {%- endif -%}
                  "
                ></a>
              {% endif %}
              {% if block.settings.media_type == 'image' %}
                <div class="img-wrapper img-wrapper--{{ block.id }} {{ section.settings.banner_height }}">
                  {% if block.settings.mbl_img == blank %}
                    {% liquid
                      assign mbl_img = block.settings.mbl_img
                      assign img = block.settings.img
                      assign mbl_img = img
                    %}
                  {% else %}
                    {% assign mbl_img = block.settings.mbl_img %}
                  {% endif %}
                  <picture>
                    <source media="(max-width:600px)" srcset="{{ mbl_img | image_url: width: 700 }}">
                    <source media="(max-width:1600px)" srcset="{{ block.settings.img | image_url: width: 800 }}">
                    <source media="(max-width:2000px)" srcset="{{ block.settings.img | image_url: width: 1000 }}">
                    <img src="{{ block.settings.img | image_url: width: block.settings.img.width }}" class="grid-img">
                  </picture>
                </div>
              {% else %}
                <div class="img-wrapper img-wrapper--{{ block.id }}">
                  {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
                </div>
              {% endif %}
              <div class="text-container">
                <div class="text-wrapper">
                  {% unless block.settings.logo == blank %}
                    <div class="logo__wrap logo__wrap--{{ block.id }}">
                      {{ block.settings.logo | image_url: width: block.settings.logo.width | image_tag }}
                    </div>
                  {% endunless %}
                  <div class="title-wrapper">
                    {% unless block.settings.caption == blank %}
                      <p class="caption h3">{{ block.settings.caption }}</p>
                    {% endunless %}
                    {% unless block.settings.title == blank %}
                      <h2 class="title">{{ block.settings.title }}</h2>
                    {% endunless %}
                    {% unless block.settings.des == blank %}
                      <p class="description">{{ block.settings.des }}</p>
                    {% endunless %}                    
                  </div>
                  <div class="button__wrap">
                    {% unless block.settings.btn == blank %}
                      <a href="{{ block.settings.btn_url }}" class="button">{{ block.settings.btn }}</a>
                    {% endunless %}
                    {% unless block.settings.btn1 == blank %}
                      <a href="{{ block.settings.btn_url1 }}" class="button">{{ block.settings.btn1 }}</a>
                    {% endunless %}
                    {% unless block.settings.btn2 == blank %}
                      <a href="{{ block.settings.btn_url2 }}" class="button">{{ block.settings.btn2 }}</a>
                    {% endunless %}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

