{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  @media screen and (min-width: 769px){
    .items-{{ id }}{
      display: grid;
      grid-template-columns: repeat(2,1fr);
      grid-gap: 32px;
    }
  }
  .heading-{{ id }}{
    margin: 0 0 32px;
    max-width: 800px;
  }
  .heading-{{ id }} h4{
    color: var(--Content-Base-main);
    font-family: var(--font-family-Title);
    font-size: var(--Font-Size-Heading-H3);
    line-height: var(--Line-Height-Heading-H3);
    letter-spacing: -0.64px;
  }
  .heading-{{ id }} p{
    color: var(--Content-Base-main);
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Regular);
    line-height: var(--Line-Height-Paragraph-Regular);
    margin: 0;
  }
  .item-{{ id }} img{
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }


  @media screen and (max-width: 768px){
    .items-{{ id }}{
      display: flex;
      grid-gap: 16px;
      overflow: hidden;
      overflow-x: auto;
      scrollbar-width: thin;
    }
    .item-{{ id }}{
      min-width: 400px;
      max-width: 90%;
    }
  }
</style>


<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% if section.settings.title != blank or section.settings.text != blank %}
        <div class="heading-{{ id }}">
          {% if section.settings.title != blank %}
            <h4>{{ section.settings.title }}</h4>
          {% endif %}
          {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
          {% endif %}
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="items-{{ id }}">
          {% for block in section.blocks %}
            {% if block.settings.image %}
              <div class="item-{{ id }}">
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Journal Section",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full Width Section",
        "default": true
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title",
        "default": "Your Fall Essentials"
