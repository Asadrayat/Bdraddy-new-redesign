{% liquid
  assign id = section.id
%}
{% assign feature_cards = product.metafields.custom.product_feature_cards %}
<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    {% if feature_cards == blank %}
      display: none;
    {% endif %}
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  .title--{{ section.id }}{
    color: #000;
    margin: 0 0 var(--Spacing-Container-lg, 40px);
    font-family: var(--font-family-Title, "Sainte Colombe");
    font-size: var(--Font-Size-Heading-H3, 32px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H3, 40px); /* 125% */
    letter-spacing: -0.64px;  
  }
.wrapper-{{ id }} {
    display: grid;
    grid-template-columns: repeat(3, minmax(0,1fr));
    gap: var(--Spacing-Container-md, 24px);
    @media(max-width: 768px) {
      grid-template-columns:  minmax(0,1fr);
      gap: var(--Spacing-Container-lg, 16px);
    }

  .--image-wrapper img {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 434.67/543.33;
    object-fit: cover;
    @media(max-width: 768px) {
     aspect-ratio: 361.00/451.25;
    }
  }
  .--single-card{
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-sm, 16px); 
    @media(max-width: 768px) {
      gap: var(--Spacing-Container-lg, 12px);
    }
  }
  .content-wrapper{
    display: flex;
    padding: var(--Spacing-Container-0, 0px);
    flex-direction: column;
    justify-content: center;
    gap: var(--Spacing-Container-xs, 12px);
    align-self: stretch;    
    
  }
  h3.--card-title {
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Title, "Sainte Colombe");
    font-size: var(--Font-Size-Heading-H4, 24px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H4, 28px); /* 116.667% */
    letter-spacing: -0.48px;
    margin: 0;
   @media(max-width: 768px) {
      /* margin-block: var(--Spacing-Container-md) var(--Spacing-Container-xxs); */
   }
  }
  p.--card-content {
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Body, "Sainte Colombe");
    font-size: var(--Font-Size-Paragraph-Regular, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Regular, 24px); /* 150% */
    margin: 0;
  }  
}  
</style>

<div class="sec-{{ id }} {% if feature_cards ==  blank %}
      hidden
    {% endif %}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <h3 class="title--{{ section.id }}">{{ section.settings.title }}</h3>
    <div class="wrapper-{{ id }}">
      {% for card in feature_cards.value %}
        <div class="--single-card">
          <div class="--image-wrapper">
            {{ card.image | image_url: width: card.image.width | image_tag }}
          </div>
          <div class="content-wrapper">
            <h3 class="--card-title">{{ card.title }}</h3>
            <p class="--card-content">{{ card.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
