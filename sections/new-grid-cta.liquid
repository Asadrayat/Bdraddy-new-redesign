{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    .image__wrap__ {
        line-height: 0;
        .image__ {
          width: 100%;
          height: auto;
          object-fit: cover;
          aspect-ratio: 4/5;
        }
    }
  
  
    .info__content {
        padding: 12px;
        display: grid;
        gap: 12px;
        @media(max-width: 600px) {
          gap:8px;
        }
        h3 {
          font-size: 16px;
          font-family: var(--font-body-family);
          line-height: 20px;
        }
        h3, a.arrow_btn {
          margin: 0;
          
          text-transform: capitalize;
        }
        a.arrow_btn {
          {% comment %} font-size: 12px; {% endcomment %}
        }
    }
    .cta_wrapp__ {
        display: flex;
        flex-direction: row;
        gap: 12px;
        justify-content: flex-start;
        flex-wrap: wrap;
        @media(max-width: 600px) {
          gap: 8px; 
        }
    }
  }
  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 24px 0;  
        @media(max-width: 1200px) {
          grid-template-columns: repeat(3, minmax(0, 1fr));
        }
        @media(max-width: 600px) {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
  }

  @media(max-width: 600px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
    .sec-{{ id }} .page-width {
      padding: 0;
    }
    .cta_wrapp__ a {
      font-size: 12px;
    }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        <div class="grid__cta__card__">
          <div class="image__wrap__">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: class: 'image__' }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'image__' }}
            {% endif %}
          </div>
          <div class="info__content">
            <h3>{{ block.settings.text }}</h3>
            <div class="cta_wrapp__">
              {% unless block.settings.label == blank %}
                <a class="arrow_btn" href="{{ block.settings.url }}">{{ block.settings.label }}</a>
              {% endunless %}
              {% unless block.settings.label1 == blank %}
                <a class="arrow_btn" href="{{ block.settings.url1 }}">{{ block.settings.label1 }}</a>
              {% endunless %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

