{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    .wrapper-{{ id }} {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--Spacing-Container-xl);
        align-items: center;
        @media(max-width: 768px) {
           grid-template-columns: 1fr;
        }
    }
    .top__ {
        display: flex;
        justify-content: space-between;
        width: 100%;
        align-items: start;
        gap: var(--Spacing-Container-lg);
    }    
    .top__ p {
        font-family: var(--font-family-Body, Gotham);
        font-size: var(--Font-Size-Paragraph-Small, 14px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Paragraph-Small, 20px);
        display: flex;
        flex-direction: column;
        gap: var(--Spacing-Container-xs);
        text-align: right;
        strong {
            color: #1F3E2F;
            font-family: var(--font-family-Heading, "Sainte Colombe");
            font-size: var(--Font-Size-Heading-H3, 20px);
            font-style: normal;
            font-weight: 700;
            line-height: var(--Line-Height-Heading-H3, 24px);    
        } 
    }   
    .card__ {
        {% comment %} border-radius: 0;
        background: #FFF;
        box-shadow: 0 8px 24px 0 rgba(149, 157, 165, 0.20);
        display: flex;
        {% comment %} min-width: 560px; {% endcomment %}
        padding: var(--Spacing-Container-xl, 32px);
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: var(--Spacing-Container-lg, 32px);
        flex: 1 0 0;
        transition: all 0.4s ease-in-out;
        &:hover {
          background: linear-gradient(135deg, #f8f6ff 0%, #00094b00 50%, #d9d2ee 100%);
          box-shadow: 0 6px 20px rgba(91, 116, 179, 0.25), 0 2px 6px rgba(0, 0, 0, 0.1);
        }            {% endcomment %}
        border-radius: 0;
        background: #fff;
        box-shadow: 0 8px 24px rgba(149, 157, 165, 0.2);
        display: flex;
        /* min-width: 560px; */
        padding: var(--Spacing-Container-xl, 32px);
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: var(--Spacing-Container-lg, 32px);
        flex: 1 0 0;
        transition: 
          background 0.6s cubic-bezier(0.19, 1, 0.22, 1),
          box-shadow 0.4s cubic-bezier(0.19, 1, 0.22, 1),
          transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);

        &:hover {
          background: linear-gradient(135deg, #f8f6ff 0%, #edeafd6b 50%, #edeafd6b 100%);
          box-shadow: 0 12px 28px rgba(91, 116, 179, 0.28), 0 4px 8px rgba(0, 0, 0, 0.08);
          transform: translateY(-4px);
        }

    }    
    .icon__ {
        display: flex;
        width: 50px;
        height: 50px;
        padding: 12px;
        justify-content: center;
        align-items: center;
        gap: 8px;
        aspect-ratio: 1/1;
        border-radius: 8px;
        background: #EEEDE6;  
        img {
            width: 100%;
            height: auto;
        }      
    } 
    .richtext__ *:(:last-child){
        color: #000;  
        margin: 0 0 8px;      
    }
    .richtext__ *:last-child {
        margin: 0;
    }
    .richtext__ h3{
        margin: 0 0 16px;
    }
    .richtext__ ul{
        margin: var(--Spacing-Container-lg) 0 0;
    }
  }

  @media(max-width: 600px) {
    .sec-{{ id }} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
</style>

<div class="sec-{{ id }}" id="{{ section.settings.sec_id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
        {% for block in section.blocks %}
            <div class="card__">
                <div class="top__">
                {% unless block.settings.icon == blank %}
                  <div class="icon__">{{ block.settings.icon | image_url: width: block.settings.icon.width | image_tag }}</div>
                {% endunless %}
                <p>{{ block.settings.text }}</p>
                </div>
                <div class="richtext__">{{ block.settings.rte }}</div>
            </div>
        {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Cards",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "text",
      "id": "sec_id",
      "label": "Section Id"
    },    
    {
