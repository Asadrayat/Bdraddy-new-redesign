{% liquid
  assign id = section.id
%}
{% assign product = section.settings.product %}
<style>
    .sec-{{ id }} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      color: var(--Content-Base-main, #1F2937);

    }

    @media(max-width: 600px) {
      .sec-{{ id }} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }


    .sec-{{ id }}{
  {% comment %} Start {% endcomment %}
  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      align-items: center;
      gap: var(--Spacing-Container-xxl, 48px);
      position: relative;
      @media(max-width: 768px){
       grid-template-columns: 1fr;
      }
  }
  h2.--text-title {
      color: inherit;
      margin-block: 0;
  }
.--text-block-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-xl, 32px);
}
.--text-block {
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-lg, 24px);

}
a.button {
    max-width: max-content;
}
.--image-block{
    position: relative;
}
.--secondary_image {
    position: absolute;
    right: -100px;
    bottom: var(--Spacing-Container-xxl, 48px);
    width: 200px;
    @media(max-width: 768px){
      
            width: 110px;
            bottom: unset;
            top: -32px;
            right: -15px;
            display: none;
    }
}






  {% comment %} End {% endcomment %}

      }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--text-block-wrapper">
        <div class="--text-block">
          <h2 class="--text-title">{{ section.settings.title }}</h2>
          <div class="--content">{{ section.settings.content }}</div>
        </div>
        {% if section.settings.button_label != blank %}
          <a class="button" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
        {% endif %}
      </div>
      <div class="--image-block">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1000 | image_tag }}
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
        {% if section.settings.image_secondary != blank %}
        <div class="--secondary_image">
          {{ section.settings.image_secondary | image_url: width: 500 | image_tag }}
        </div>
      {% endif %}
      </div>
      
    </div>
  </div>
</div>

