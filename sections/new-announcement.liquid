{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    background-color: {{ section.settings.background }};
    position: relative;
    z-index: 13;
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }

  .announcement-bar--fixed.new-announcement-bar {
    position: fixed !important;
    left: 0;
    right: 0;
    width: 100%;
    transition: top 0.3s ease;
  }

  .sec-{{ id }} .page-width{
    /* max-width: 2000px; */
  }
  .wrapper-{{ id }}{
    /* display: flex;
    align-items: center;
    justify-content: space-between; */
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    color: {{ section.settings.color }};
    @media(max-width: 1249px) {
      grid-template-columns: 1fr;
    }
  }
  .text-wrapper-{{ id }} p,  .text-wrapper-{{ id }} p a{
    color: inherit;
    text-align: center;
    font-family: var(--font-family-Heading, Gotham);
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 20px;
    text-transform: uppercase;
    margin: 0;
    @media(max-width: 768px) {
      font-size: 10px;
    }
  }
  .wrapper-{{ id }} .links-wrapper{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    @media(max-width: 768px) {
      justify-content: center;      
    }
  }
  .wrapper-{{ id }} .links-wrapper p{
    color: inherit;
    font-family: var(--font-family-Control);
    font-size: var(--Font-Size-Paragraph-Tiny);
    line-height: var(--Line-Height-Paragraph-Tiny); /* 133.333% */
    margin: 0;
    &:not(:last-child) a{
      border-right: 1px solid #fff;
    }
  }
  .wrapper-{{ id }} .links-wrapper p a{
    color: inherit;
    text-align: center;
    font-family: var(--font-family-Heading, Gotham);
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: 20px;
    text-transform: uppercase;
    margin: 0;
    padding: 0 12px;
  }
  .text-wrapper-{{ id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }
  .country-button span {
      font-size: var(--Font-Size-Paragraph-Tiny);
      line-height: var(--Line-Height-Paragraph-Tiny);
  }
  .text-wrapper-{{ id }} p a, .wrapper-{{ id }} .links-wrapper a{
    display: inline-block;
    color: inherit;
    text-decoration: none;
  }
  .text-wrapper-{{ id }} svg *{
    fill: #FFF;
  }
  @media screen and (max-width: 768px){
    #shopify-section-{{id}}{
      z-index: 4;
    }
    .wrapper-{{ id }}{
      justify-content: center;
      grid-template-columns: 1fr;
    }
    .wrapper-{{ id }} p{
      font-size: var(--Font-Size-Paragraph-Tiny);
      line-height: var(--Line-Height-Paragraph-Tiny);
    }

  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="currency-wrapper hide__sm">
        <div class="header__currency">
          {% render 'currency-switcher' %}
        </div>
      </div>
      <div class="text-wrapper-{{ id }}">
        {% for block in section.blocks %}
          {% if block.type == 'text' %}
            {% if block.settings.title != blank or block.settings.title_m != blank %}
              {% render 'all-icons', name: 'draddy' %}
              <p class="hide__sm">
                <a href="{{ block.settings.link | default: '#' }}">{{ block.settings.title }}</a>
              </p>
              <p class="hide__lg">
                <a href="{{ block.settings.link | default: '#' }}">{{ block.settings.title_m }}</a>
              </p>
              {% render 'all-icons', name: 'draddy' %}
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
      <div class="links-wrapper {%if section.settings.hide_sb %} hide__sm{% endif %}">
        {% for block in section.blocks %}
          {% if block.type == 'links' %}
            {% if block.settings.title != blank %}
              <p>
                <a href="{{ block.settings.link | default: '#' }}">{{ block.settings.title }}</a>
              </p>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "New Announcement",
  "class": "new-announcement-bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hide_sb",
      "label": "Hide Side Buttons(Mobile)",
      "default": true
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "title_m",
          "label": "Text(Mobile)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    },
    {
      "type": "links",
      "name": "Liks",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Announcement"
    }
  ]
}
{% endschema %}
