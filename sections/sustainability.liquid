{% liquid
  assign id = section.id
%}


<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  @media(max-width: 768px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
  #shopify-section-{{id}} .page-width{
    max-width: 1350px;
  }
  .sustainability-goals {
    display: grid;
    grid-template-columns: repeat(3,1fr);
    gap: 40px;
    padding: 20px;
  }
  
  .goal-number {
    color: #000;
    text-align: center;
    font-family: var(--font-family-Body);
    font-size: 64px;
    line-height: 64px;
    letter-spacing: -1.28px;
    text-transform: uppercase;
    margin: 0 0 12px;
  }
  
  .goal-description {
    color: #000;
    text-align: center;
    font-family: var(--font-family-Body);
    font-size: var(--Font-Size-Paragraph-Regular);
    line-height: var(--Line-Height-Paragraph-Regular);
    margin: 0;
  }

@media (max-width: 768px) {
  .sustainability-goals {
    grid-template-columns: 1fr;
    gap: 20px;
    padding: 15px;
  }
  .goal-number {
    font-size: 32px;
    line-height: 32px;
  }
}
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="sustainability-goals">
        {% for block in section.blocks %}
          <div class="goal-block" data-percentage="{{ block.settings.percentage }}">
            <div class="goal-number" data-count-to="{{ block.settings.percentage }}">0</div>
            <p class="goal-description">{{ block.settings.description }}</p>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const goals = document.querySelectorAll('.goal-block');
  
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const numberElement = entry.target.querySelector('.goal-number');
        const countTo = parseInt(numberElement.getAttribute('data-count-to'));
        let count = 0;
        const duration = 2000; // 2 seconds
        const increment = countTo / (duration / 16); // Approx 60fps
        
        function updateCount() {
          if (count < countTo) {
            count += increment;
            numberElement.textContent = Math.floor(count) + '%';
            requestAnimationFrame(updateCount);
          } else {
            numberElement.textContent = countTo + '%';
          }
        }
        requestAnimationFrame(updateCount);
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.5 });

  goals.forEach(goal => observer.observe(goal));
});
</script>


