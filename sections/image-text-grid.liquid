{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      .button.outlined {
        width: max-content;
      }
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }

  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(2,1fr);
      align-items: center;
      @media(max-width: 600px) {
        grid-template-columns: 1fr;
        gap: var(--Spacing-Container-lg, 24px);
      }


  .--image-wrapper {
      /* border-radius: var(--rounded-lg, 8px);
      overflow: hidden; */
      @media(max-width: 600px) {
         grid-row: 1/2;
       }
    img {
      width: 100%;
      aspect-ratio: 4/5;
    }

  }

  .--text-block-container.--text-first {
      padding-right: var(--Spacing-Container-lg);
       @media(max-width: 600px) {
         padding-right: unset;
       }
  }
  .--text-block-container.--text-last {
      padding-left: var(--Spacing-Container-lg);
      @media(max-width: 600px) {
         padding-left: unset;
       }
  }

  h3.--title {
      color: #000;

      /* Headings/H3 */
      font-family: var(--font-family-Title, "Parnaso Display Trial");
      font-size: var(--Font-Size-Heading-H3, 32px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H3, 40px); /* 125% */
      letter-spacing: -0.64px;
      margin-block: 0 var(--Spacing-Container-md);
  }

  .--content {
      margin-block: 0 var(--Spacing-Container-lg);
      color: #000;
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px);
  }







  .--icon-card-container {
      display: flex;
      gap: var(--Spacing-Container-lg);
  }
  .--card-wrapper {
      text-align: center;
      color: #000;
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px);
      img {
        max-width: 50px;
        aspect-ratio: 1;
        margin: 0 auto var(--Spacing-Container-xs);
      }
  }
  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper">
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h3 class="--title">{{ block.settings.title }}</h3>
              <div class="--content">{{ block.settings.content }}</div>
              {% if block.settings.btn_label != blank -%}
                <a class="button outlined" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
              {%- endif %}
              <div class="--icon-card-container">
                {% if block.settings.feature_1_label != blank and block.settings.feature_1_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_1_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_1_label }}
                  </div>
                {% endif %}
                {% if block.settings.feature_2_label != blank and block.settings.feature_2_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_2_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_2_label }}
                  </div>
                {% endif %}
                {% if block.settings.feature_3_label != blank and block.settings.feature_3_icon != blank %}
                  <div class="--card-wrapper">
                    {{ block.settings.feature_3_icon | image_url: width: 44 | image_tag }}
                    {{ block.settings.feature_3_label }}
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Text Grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 48
    },
    {
      "type": "header",
      "content": "Section Spacing Mobile"
    },
    {
      "type": "range",
      "id": "margin_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "feature_1_label",
          "label": "Feature 1 Label"
        },
        {
          "type": "image_picker",
          "id": "feature_1_icon",
          "label": "Feature 1 Icon"
        },
        {
          "type": "text",
          "id": "feature_2_label",
          "label": "Feature 2 Label"
        },
        {
          "type": "image_picker",
          "id": "feature_2_icon",
          "label": "Feature 2 Icon"
        },
        {
          "type": "text",
          "id": "feature_3_label",
          "label": "Feature 3 Label"
        },
        {
          "type": "image_picker",
          "id": "feature_3_icon",
          "label": "Feature 3 Icon"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label",
          "default": "Read more"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Text Grid"
    }
  ]
}
{% endschema %}
