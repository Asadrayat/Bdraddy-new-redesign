{% liquid
  assign id = section.id
%}

<style>
  .sec-{{ id }} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }

  .wrapper-{{ id }}{
    display: grid;
    grid-template-columns: repeat(2,minmax(0,1fr));
    gap: var(--Spacing-Container-md, 24px);
    @media(max-width: 768px){
      grid-template-columns: minmax(0,1fr);
    }
  }

  .sec-{{ id }} .img-wrapper--{{ section.id }} img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .sec-{{ id }} .left--wrapper {
    position: relative;
  }
  .sec-{{ id }} .right--wrapper  {
    @media screen and (min-width: 769px){
      {% if section.settings.img_position == 'right' %}
        grid-column: 1;
        grid-row: 1;
      {% endif %}
    }
  }
  .right--wrapper-header{
    margin: 0 0 40px;
  }
  .right--wrapper-header h2{
    font-size: 32px;
    line-height: 40px;
    color: #1F2937;
    margin: 0 0 24px;
  }
  .right--wrapper-header p{
    font-size: 16px;
    line-height: 24px;
    color: #1F2937;
    margin: 0;
  }
  .fabrics{
    margin: 0 0 40px;
  }
  .fabrics-wrapper {
    display: grid;
    grid-template-columns: repeat(4,1fr);
    grid-gap: 32px;
    align-items: center;
    justify-content: space-between;
  }
  .fabric-item{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    flex-direction: column;
  }
  .fabric-item .fabric-image img{
    display: block;
    max-width: 115px;
    height: auto;
  }
  .fabric-item p{
    font-size: 14px;
    line-height: 24px;
    color: #1F2937;
    margin: 0;
  }

  .swiper-scrollbar-{{ section.id }} {
    position: relative !important;
    left: 0 !important;
    bottom: 0 !important;
    margin: var(--Spacing-Container-sm) 0 0 0;
    height: 1px !important;
    opacity: 1 !important;
    width: 100% !important;
    cursor: pointer;
    padding-block: 8px;
    background: transparent;
    .swiper-scrollbar-drag {
      background: #00094b;
      display: block !important;
      height: 1px;
    }
  }
  .swiper-scrollbar-{{ section.id }}::before {
    position: absolute;
    content: "";
    background: var(--swiper-scrollbar-bg-color, rgba(0, 0, 0, .1));
    top: 50%;
    left: 0;
    width: 100%;
    height: 1px;
  }

  @media screen and (max-width: 768px){
    .right--wrapper-header{
      margin: 0 0 24px;
    }
    .right--wrapper-header h2{
      font-size: 20px;
      line-height: 24px;
    }
    .right--wrapper-header p{
      font-size: 16px;
      line-height: 24px;
    }
    .fabrics{
      margin: 0 0 24px;
    }
    .fabrics-wrapper {
      grid-template-columns: repeat(2,1fr);
    }
  }
</style>

<div class="sec-{{ id }}" id="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %} belongsToNav" id="{{ section.settings.sec_id  | downcase }}">
    <div class="wrapper-{{ id }}">
      <!-- Left Image -->
      <div class="left--wrapper">
        <div class="img-wrapper--{{ section.id }}">
          {% if section.settings.image %}
            {{ section.settings.image | image_url: width: section.settings.image.width | image_tag }}
          {% endif %}
        </div>
      </div>

      <!-- Right Product List Mobile -->
      <div class="right--wrapper right--wrapper-mbl">
        <div class="right--wrapper-inner">
          {% if section.settings.title != blank or section.settings.text != blank %}
            <div class="right--wrapper-header">
              {% if section.settings.title != blank %}
                <h2>{{ section.settings.title }}</h2>
              {% endif %}
              {% if section.settings.text != blank %}
                <p>{{ section.settings.text }}</p>
              {% endif %}
            </div>
          {% endif %}
          
          {% assign fabrics = section.blocks | where: 'type', 'fabric' %}
          {% if fabrics.size > 0 %}
            <div class="fabrics">
              <div class="fabrics-wrapper">
                {% for fabric in fabrics %}
                  <div class="fabric-item">
                    {% if fabric.settings.image %}
                      <div class="fabric-image">
                        {{ fabric.settings.image | image_url: width: fabric.settings.image.width | image_tag }}
                      </div>
                    {% endif %}
                    {% if fabric.settings.title != blank %}
                      <p>{{ fabric.settings.title }}</p>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
          <div class="right--wrapper-slider">
            <div class="swiper swiper-{{ section.id }}">
              <div class="swiper-wrapper">
                {% for block in section.blocks %}
                  {% if block.type == 'collection' %}
                    {% unless block.settings.collection == blank %}
                      {% for product in block.settings.collection.products limit: section.settings.p_to_show %}
                        <div class="swiper-slide">
                           {%# render 'product-card-new-v1', product: product, loading: true %}
                    {% render 'product-card-v3', product: product, loading: true %}
                        </div>
                      {% endfor %}
                    {% endunless %}
                  {% endif %}
                {% endfor %}
              </div>
              <div class="swiper-scrollbar-{{ section.id }} swiper-scrollbar"></div>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

